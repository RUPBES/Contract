@using BusinessLayer.Enums
@inject BusinessLayer.Interfaces.CommonInterfaces.IConverter Converter
@model string
@{    
    int backId = 0;
    if (ViewBag.returnContractId == 0)
        backId = ViewBag.contractId;
    else backId = ViewBag.returnContractId;
    var contid = ViewBag.contractId;
}
<style>
    .form_select {
        display: flex;
        flex-direction: column;
    }

    .btn {
        margin-left: 72%;
    }
</style>

<div class="dm-overlay">
    <div class="dm-table">
        <div class="dm-cell">
            <div class="dm-modal" style="max-width:960px;">
                <div class="top-modal-block">
                    <label class="my-modal-title">@ViewData["Title"]</label>
                    @if (backId != null && backId > 0)
                    {
                        <a asp-controller="Amendments" asp-action="GetByContractId" asp-route-id="@backId" class="close-btn"></a>
                    }
                    @if (backId == null || backId == 0)
                    {
                        <a asp-controller="Amendments" asp-action="" class="close-btn"></a>
                    }
                </div>
                <hr class="modal-line" />
                <div class="row">
                    <form asp-action="Create" method="get">
                        <div>
                            <input name="contractId" value="@ViewBag.contractId" hidden />
                            <input name="returnContractId" value="@ViewBag.returnContractId" hidden />
                            <label class="control-label">Дополнительное соглашение для:</label>
                            <select name="typeName" class="form-select">
                                @foreach (var item in Enum.GetValues<AmendmentType>())
                                {
                                    <option value="@item.ToString()" selected>
                                        <span>
                                            @Converter?.GetTypeOfAmendment((int)item)
                                        </span>
                                    </option>
                                }
                            </select>
                        </div>
                        <button class="mt-3 btn btn-primary" type="submit">Выбрать</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>