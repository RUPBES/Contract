@model MvcLayer.Models.AddressViewModel

@{
    ViewData["Title"] = "Удаление";
}

<h1>@ViewData["Title"]</h1>

<div>
    <h4>Адрес</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FullAddress)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FullAddress)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PostIndex)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PostIndex)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Organization)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Organization.Id)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Удалить" class="btn btn-danger" />
        <a asp-action="Index">Назад</a>
    </form>
</div>
