@using MvcLayer.Models;
@using Newtonsoft.Json;
@model List<MvcLayer.Models.PrepaymentViewModel>

@{
    ViewData["Title"] = "CreatePrepayment";
    int index = 0;

    var d = new List<PrepaymentViewModel>();
    //if (TempData["scopeW"] is string s)
    //{
    //    d.AddRange(JsonConvert.DeserializeObject<List<ScopeWorkViewModel>>(s));
    //}
}
<style>
    .cont-table {
        overflow-x: scroll;
    }

    th,
    td {
        min-width: 250px;
    }
</style>
<h4>Авансы
</h4>
<hr />

<form asp-action="Create" class="row">
    <div class="cont-table">
        <table class="table table-bordered table-striped">
            <tr>
                <th>Период</th>
                @foreach (var item in d)
                {
                    <td>
                        @item.Period?.ToString("MMM yyyy")
                        <input asp-for="@Model[index].Period" type="text" class="form-control" value="@item.Period" hidden />
                    </td>
                    index++;
                }
                @{
                    index = 0;
                }
            </tr>
            <tr>
                <th>Текущие авансы</th>
                @foreach (var item in d)
                {
                    <td><input asp-for="@Model[index].CurrentValue" class="form-control" type="number" step="0.001" min="0" /></td>
                    index++;
                }
                @{
                    index = 0;
                }
            </tr>
            <tr>
                <th>Текущие авансы по факту</th>
                @foreach (var item in d)
                {
                    <td><input asp-for="@Model[index].CurrentValueFact" class="form-control" type="number" step="0.001" min="0" /></td>
                    index++;
                }
                @{
                    index = 0;
                }
            </tr>
            <tr>
                <th>Текущие авансы</th>
                @foreach (var item in d)
                {
                    <td><input asp-for="@Model[index].TargetValue" class="form-control" type="number" step="0.001" min="0" /></td>
                    index++;
                }
                @{
                    index = 0;
                }
            </tr>
            <tr>
                <th>Текущие авансы по факту</th>
                @foreach (var item in d)
                {
                    <td><input asp-for="@Model[index].TargetValueFact" class="form-control" type="number" step="0.001" min="0" /></td>
                    index++;
                }
                @{
                    index = 0;
                }
            </tr>
            <tr>
                <th>Отработка целевых</th>
                @foreach (var item in d)
                {
                    <td><input asp-for="@Model[index].WorkingOutValue" class="form-control" type="number" step="0.001" min="0" /></td>
                    index++;
                }
                @{
                    index = 0;
                }
            </tr>
            <tr>
                <th>Отработка целевых по факту</th>
                @foreach (var item in d)
                {
                    <td><input asp-for="@Model[index].WorkingOutValueFact" class="form-control" type="number" step="0.001" min="0" /></td>
                    index++;
                }
                @{
                    index = 0;
                }
            </tr>

            @foreach (var item in d)
            {
                <input asp-for="@Model[index].ContractId" hidden />
                <input asp-for="@Model[index].IsChange" hidden />

                index++;
            }
             
        </table>
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
