            let drawingKitName = $("#drawingKitId").val();
            let estimateId = $("#estimateId").val();

            let formData = new FormData(files2);
            event.preventDefault()
            function setProgress(e) {
                if (e.lengthComputable) {
                    $("#container_progress").removeAttr('style');
                    var complete = e.loaded / e.total;
                    var completeFloor = Math.floor(complete * 100)
                    $("#pBar").attr('style', `width:${completeFloor}%`);
                    $("#pBar").text(`${completeFloor}%`);
                }
            }
            $.ajax({
                xhr: function () {
                    var xhr = new window.XMLHttpRequest();
                    xhr.upload.addEventListener("progress", setProgress, false);
                    xhr.addEventListener("progress", setProgress, false);
                    return xhr;
                },
                type: 'POST',
                url: '@Url.Action("DownloadDrawingOfEstimate", "Parse")',
                data: formData,
                success: function (data) {
                    let path = data;
                    location.href = `./GetEstimateCost?estimateId=${data}`;
                },
                error: function (result) {
                    $.ajax({
                        type: 'POST',
                        url: '@Url.Action("ShowError", "Parse")',
                        data: { message: "Загрузите файл excel (кроме Excel книга 97-2033)" },
                        dataType: 'html',
                        success: function (data) {
                            $("#result").html(data)
                            $("#container_progress").attr('style', `display:none`);
                        }
                    });
                },
                contentType: false,
                processData: false
            });

            return false;
        });
    </script>
}