@model IEnumerable<MvcLayer.Models.ScopeWorkViewModel>

@inject BusinessLayer.Interfaces.ContractInterfaces.IContractService Contract
@inject BusinessLayer.Interfaces.ContractInterfaces.IServiceCostService ScopeCostWork
@inject BusinessLayer.Interfaces.ContractInterfaces.IFormService Form
@inject BusinessLayer.Interfaces.ContractInterfaces.IOrganizationService Organization

@{
    ViewData["Title"] = "Мониторинг выполнения графика производства работ";
    List<DateTime> listDate = ViewBag.ListDate;
}
<style>
    table {
        text-align: center;
    }

    .wrapper-table {
        width: 65vw;
        height: 75vh;
        overflow: scroll;
    }

        .wrapper-table tbody, td, tfoot, th, thead, tr {
            border-color: #373b3e;
            border-style: solid;
            border-width: 0;
        }

        .wrapper-table table td:first-child {
            position: sticky;
            z-index: 10;
            left: 0;
            background-color: #adadad;
        }

        .wrapper-table table th:first-child {
            position: sticky;
            z-index: 20;
            left: 0;
            top: 0;
            
        }

        .wrapper-table thead {
            position: sticky;
            z-index: 20;
            left: 0;
            top: 0;
            opacity: 1;
            border-color: #373b3e ;
        }

    .second-td-elem {
        z-index: 5 !important;
        box-shadow: inset 0 0 0 9999px #bdbac3 !important;
        background-color: grey !important;
    }
</style>

<div class="dm-overlay">
    <div class="dm-table">
        <div class="dm-cell">
            <div class="dm-modal">
                <div class="top-modal-block">
                    <label class="my-modal-title">@ViewData["Title"]</label>
                    <a asp-controller="Home" asp-action="" class="close-btn"></a>
                </div>
                <hr class="modal-line" />
                <div class="wrapper-table">
                    <table class="table table-bordered table-main table-main-short">
                        <thead class="table-dark text-center text-white align-top" style="position:sticky">
                            <tr>
                                <th rowspan="3">
                                    Номер и дата договора
                                </th>
                                <th rowspan="3">
                                    Наименование объекта
                                </th>
                                <th rowspan="3">
                                    Заказчик
                                </th>
                                <th rowspan="3">
                                    Генподрядчик (филиал-исполнитель по приказу)
                                </th>
                                <th rowspan="3">
                                    Субподрядчик (филиал-исполнитель по приказу)
                                </th>
                                <th rowspan="3">
                                    Сроки выполнения работ
                                </th>
                                <th rowspan="3">
                                    Срок ввода
                                </th>
                                <th rowspan="3">
                                    Валюта расчетов
                                </th>
                                <th rowspan="3">
                                    Контракная договорная цена, с учетом НДС
                                </th>
                                <th rowspan="3">
                                    Остаток по выполнению от стоимости контрактной цены
                                </th>
                                <th rowspan="3">
                                    Объем на текущий год
                                </th>
                                <th rowspan="3">
                                    Виды работ по договору
                                </th>
                                <th colspan="@(listDate.Count*3)">в том числе</th>
                                <th rowspan="3">
                                    Перевыполнение + (недовыполнение -) графика
                                </th>
                            </tr>
                            <tr>
                                @foreach (var item in listDate)
                                {
                                    <th colspan="3">
                                        @item.ToString("MMMM yyyy")
                                    </th>
                                }
                            </tr>
                            <tr>
                                @foreach (var item in listDate)
                                {
                                    <th>
                                        План
                                    </th>
                                    <th>
                                        Факт
                                    </th>
                                    <th>
                                        Отклонение
                                    </th>
                                }
                            </tr>
                        </thead>
                        <tbody style="height:70vh;">
                            @foreach (var item in Model)
                            {
                                var contract = @Contract.GetById((int)item?.ContractId);
                                var cost = item.SWCosts;
                                var client = contract.ContractOrganizations.FirstOrDefault(x => x.ContractId == item.ContractId && x.IsClient == true);
                                var genContractor = contract.ContractOrganizations.FirstOrDefault(x => x.ContractId == item.ContractId && x.IsGenContractor == true);
                                var subContractor = contract.ContractOrganizations.FirstOrDefault(x => x.ContractId == item.ContractId && x.IsGenContractor != true && x.IsClient != true && x.Contract.IsSubContract == true);

                                var deviationTotal = 0M;
                                <tr>
                                    <td rowspan="7">
                                        @contract?.Number <br>
                                        @contract?.Date?.ToShortDateString()
                                    </td>
                                    <td rowspan="7">
                                        @contract?.NameObject
                                    </td>
                                    <td rowspan="7">
                                        @client?.Organization.Name
                                    </td>
                                    <td rowspan="7">
                                        @genContractor?.Organization.Name
                                    </td>
                                    <td rowspan="7">
                                        @subContractor?.Organization.Name
                                    </td>
                                    <td rowspan="7">
                                        @contract?.DateBeginWork?.ToShortDateString() - @contract?.DateEndWork?.ToShortDateString()
                                    </td>
                                    <td rowspan="7">
                                        @contract?.EnteringTerm?.ToShortDateString()
                                    </td>
                                    <td rowspan="7">
                                        @contract?.Сurrency
                                    </td>
                                    <td rowspan="7">
                                        @contract?.ContractPrice?.ToString("0.00")
                                    </td>
                                    <td rowspan="7">
                                        jc
                                    </td>
                                    <td rowspan="7">
                                        jd
                                    </td>
                                </tr>

                                <tr>
                                    <td class="second-td-elem">
                                        СМР
                                    </td>
                                    @foreach (var item2 in listDate)
                                    {
                                        <td>
                                            @{
                                                var resultPlan = cost.FirstOrDefault(x => x.IsOwnForces != true && x.Period?.Date == item2) != null ?
                                                cost.FirstOrDefault(x => x.IsOwnForces != true && x.Period?.Date == item2).SmrCost : null;
                                            }
                                            @resultPlan?.ToString("0.00")
                                        </td>
                                        <td>
                                            @{
                                                var resultFact = Form.Find(x => x.IsOwnForces != true && x.Period?.Date == item2).FirstOrDefault() != null ?
                                                Form.Find(x => x.IsOwnForces != true && x.Period?.Date == item2).FirstOrDefault().SmrCost : null;
                                            }
                                            @resultFact?.ToString("0.00")
                                        </td>
                                        <td>
                                            @{
                                                var deviation = resultPlan - resultFact;
                                                deviationTotal += deviation is not null ? (decimal)deviation : 0M;
                                            }
                                            @deviation?.ToString("0.00")
                                        </td>
                                    }

                                    <td>
                                        @deviationTotal.ToString("0.00")
                                    </td>

                                </tr>
                                <tr>
                                    <td class="second-td-elem">
                                        ДОП. РАБОТЫ
                                    </td>
                                    @foreach (var item2 in listDate)
                                    {
                                        <td>
                                            @{
                                                var resultPlan = cost.FirstOrDefault(x => x.IsOwnForces != true && x.Period?.Date == item2) != null ?
                                                cost.FirstOrDefault(x => x.IsOwnForces != true && x.Period?.Date == item2).AdditionalCost : null;
                                            }
                                            @resultPlan?.ToString("0.00")
                                        </td>
                                        <td>
                                            @{
                                                var resultFact = Form.Find(x => x.IsOwnForces != true && x.Period?.Date == item2).FirstOrDefault() != null ?
                                                Form.Find(x => x.IsOwnForces != true && x.Period?.Date == item2).FirstOrDefault().AdditionalCost : null;
                                            }
                                            @resultFact?.ToString("0.00")
                                        </td>
                                        <td>
                                            @{
                                                var deviation = resultPlan - resultFact;
                                                deviationTotal += deviation is not null ? (decimal)deviation : 0M;
                                            }
                                            @deviation?.ToString("0.00")
                                        </td>
                                    }

                                    <td>
                                        @deviationTotal.ToString("0.00")
                                    </td>

                                </tr>
                                <tr>
                                    <td class="second-td-elem">
                                       ПНР
                                    </td>
                                    @foreach (var item2 in listDate)
                                    {
                                        <td>
                                            @{
                                                var resultPlan = cost.FirstOrDefault(x => x.IsOwnForces != true && x.Period?.Date == item2) != null ?
                                                cost.FirstOrDefault(x => x.IsOwnForces != true && x.Period?.Date == item2).PnrCost : null;
                                            }
                                            @resultPlan?.ToString("0.00")
                                        </td>
                                        <td>
                                            @{
                                                var resultFact = Form.Find(x => x.IsOwnForces != true && x.Period?.Date == item2).FirstOrDefault() != null ?
                                                Form.Find(x => x.IsOwnForces != true && x.Period?.Date == item2).FirstOrDefault().PnrCost : null;
                                            }
                                            @resultFact?.ToString("0.00")
                                        </td>
                                        <td>
                                            @{
                                                var deviation = resultPlan - resultFact;
                                                deviationTotal += deviation is not null ? (decimal)deviation : 0M;
                                            }
                                            @deviation?.ToString("0.00")
                                        </td>
                                    }

                                    <td>
                                        @deviationTotal.ToString("0.00")
                                    </td>

                                </tr>
                                <tr>
                                    <td class="second-td-elem">
                                        ОБОРУДОВАНИЕ
                                    </td>
                                    @foreach (var item2 in listDate)
                                    {
                                        <td>
                                            @{
                                                var resultPlan = cost.FirstOrDefault(x => x.IsOwnForces != true && x.Period?.Date == item2) != null ?
                                                cost.FirstOrDefault(x => x.IsOwnForces != true && x.Period?.Date == item2).EquipmentCost : null;
                                            }
                                            @resultPlan?.ToString("0.00")
                                        </td>
                                        <td>
                                            @{
                                                var resultFact = Form.Find(x => x.IsOwnForces != true && x.Period?.Date == item2).FirstOrDefault() != null ?
                                                Form.Find(x => x.IsOwnForces != true && x.Period?.Date == item2).FirstOrDefault().EquipmentCost : null;
                                            }
                                            @resultFact?.ToString("0.00")
                                        </td>
                                        <td>
                                            @{
                                                var deviation = resultPlan - resultFact;
                                                deviationTotal += deviation is not null ? (decimal)deviation : 0M;
                                            }
                                            @deviation?.ToString("0.00")
                                        </td>
                                    }

                                    <td>
                                        @deviationTotal.ToString("0.00")
                                    </td>

                                </tr>
                                <tr>
                                    <td class="second-td-elem">
                                        ПРОЧИЕ РАБОТЫ И УСЛУГИ
                                    </td>
                                    @foreach (var item2 in listDate)
                                    {
                                        <td>
                                            @{
                                                var resultPlan = cost.FirstOrDefault(x => x.IsOwnForces != true && x.Period?.Date == item2) != null ?
                                                cost.FirstOrDefault(x => x.IsOwnForces != true && x.Period?.Date == item2).OtherExpensesCost : null;
                                            }
                                            @resultPlan?.ToString("0.00")
                                        </td>
                                        <td>
                                            @{
                                                var resultFact = Form.Find(x => x.IsOwnForces != true && x.Period?.Date == item2).FirstOrDefault() != null ?
                                                Form.Find(x => x.IsOwnForces != true && x.Period?.Date == item2).FirstOrDefault().OtherExpensesCost : null;
                                            }
                                            @resultFact?.ToString("0.00")
                                        </td>
                                        <td>
                                            @{
                                                var deviation = resultPlan - resultFact;
                                                deviationTotal += deviation is not null ? (decimal)deviation : 0M;
                                            }
                                            @deviation?.ToString("0.00")
                                        </td>
                                    }

                                    <td>
                                        @deviationTotal.ToString("0.00")
                                    </td>

                                </tr>
                                <tr>
                                    <td class="second-td-elem">
                                        СТОИМОСТЬ МАТЕРИАЛОВ ЗАКАЗЧИКА
                                    </td>
                                    @foreach (var item2 in listDate)
                                    {
                                        <td>
                                            @{
                                                var resultPlan = cost.FirstOrDefault(x => x.IsOwnForces != true && x.Period?.Date == item2) != null ?
                                                cost.FirstOrDefault(x => x.IsOwnForces != true && x.Period?.Date == item2).MaterialCost : null;
                                            }
                                            @resultPlan?.ToString("0.00")
                                        </td>
                                        <td>
                                            @{
                                                var resultFact = Form.Find(x => x.IsOwnForces != true && x.Period?.Date == item2).FirstOrDefault() != null ?
                                                Form.Find(x => x.IsOwnForces != true && x.Period?.Date == item2).FirstOrDefault().MaterialCost : null;
                                            }
                                            @resultFact?.ToString("0.00")
                                        </td>
                                        <td>
                                            @{
                                                var deviation = resultPlan - resultFact;
                                                deviationTotal += deviation is not null ? (decimal)deviation : 0M;
                                            }
                                            @deviation?.ToString("0.00")
                                        </td>
                                    }

                                    <td>
                                        @deviationTotal.ToString("0.00")
                                    </td>

                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>