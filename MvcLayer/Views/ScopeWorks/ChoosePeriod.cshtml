@model MvcLayer.Models.PeriodChooseViewModel
@using BusinessLayer.Models;
@inject BusinessLayer.Interfaces.ContractInterfaces.IAmendmentService Amendment
@inject BusinessLayer.Interfaces.ContractInterfaces.IScopeWorkService Scope

@{
    ViewData["Title"] = "Create";
    bool hasScope = false;
    var scopes = @Scope.Find(x => x.ContractId == Model.ContractId)?.FirstOrDefault();
    if (scopes is not null)
    {
        hasScope = true;
    }
}
<style>
    .title-warning {
        display: flex;
        justify-content: center;
        font-family: Inter;
        font-size: 20px;
        font-style: normal;
        font-weight: 700;
        line-height: 22px;
        letter-spacing: -0.34px;
        border: solid #e83c14 1px;
        border-radius: 5px;        
    }

    label {
        margin: 10px auto;
    }

    #target {
        margin: 100px auto;
        width: 50%;
    }

    #chooseAmendment {
        margin: 0 auto 30px auto;
    }
</style>
@if (hasScope)
{
    <form id="target" asp-action="CreatePeriods" class="row" method="post" enctype="multipart/form-data" data-ajax="true" data-ajax-method="POST" data-ajax-mode="replace" data-ajax-update="#result">
        <input asp-for="ContractId" value="@Model?.ContractId" hidden />
        <div class="form-group col-12">
            <div class="title-warning"><span>Объем работ для данного договора заполнен</span></div>
            <label for="amendCheck">Внести изменения для объема работ по доп.соглашению?</label>
            <input type="checkbox" id="amendCheck" name="IsChange" value="false" />
        </div>
        <div id="chooseAmendment" class="row" hidden>
            <div class="form-group">
                <label class="control-label">Выбрать доп.соглашение</label>
                <select name="AmendmentId" id="AmendId" class="form-control select">
                    <option disabled selected>Выберите</option>
                    @foreach (AmendmentDTO org in Amendment.GetAll())
                    {
                        <option value="@org.Id">Номер: @org.Number - Изменено: @org.ContractChanges</option>
                    }
                </select>
            </div>
            <div class="row mt-3" id="date-box" hidden>
                <div class="form-group col-6 mb-3">
                    <label for="amendCheck1">Укажите начало периода</label>
                    <input asp-for=PeriodStart type="datetime" id="amendCheck1" class="datepickers" />
                </div>
                <div class="form-group col-6 mb-3">
                    <label for="amendCheck2">Укажите окончание периода</label>
                    <input asp-for=PeriodEnd type="datetime" id="amendCheck2" class="datepickers" />
                </div>
                <button class="btn btn-primary btn-sm" type="submit">Выбрать</button>

            </div>
        </div>
    </form>
}

@if (!hasScope)
{
    
    
    <form id="target" asp-action="CreatePeriods" class="row" method="post" enctype="multipart/form-data" data-ajax="true" data-ajax-method="POST" data-ajax-mode="replace" data-ajax-update="#result">
        <h4>Выбор периода объема работ</h4>
        <input asp-for="ContractId" value="@Model?.ContractId" hidden />
        <div class="form-group col-12 mb-3">
            <label for="ownForceId">Объем работ производится собственными силами?</label>
            <input type="checkbox" id="ownForceId" name="IsOwnForces"value="false" />
        </div>
        <div class="form-group col-6 mb-3">
            <label for="amendCheck1">Укажите начало периода</label>
            <input asp-for=PeriodStart type="datetime" id="amendCheck1" class="datepickers" />
        </div>
        <div class="form-group col-6 mb-3">
            <label for="amendCheck2">Укажите окончание периода</label>
            <input asp-for=PeriodEnd type="datetime" id="amendCheck2" class="datepickers" />
        </div>
        <button class="btn btn-primary  btn-sm" type="submit">Выбрать</button>
    </form>
}
