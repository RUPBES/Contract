@using MvcLayer.Models;
@using Newtonsoft.Json;
@model MvcLayer.Models.ScopeWorkViewModel

@{
    ViewData["Title"] = "Редактирование объема работ";
    decimal? sumSmr = 0;
    decimal? sumPnr = 0;
    decimal? sumEquip = 0;
    decimal? sumOther = 0;
    int index = 0;
}

<style>
    .cont-table {
        overflow-x: scroll;
    }

    th,
    td {
        min-width: 250px;
    }


    .dm-modal {
        background-color: lightsteelblue;
    }

    .form-group {
        text-align: right;
    }

    .input-group {
        width: auto !important;
    }

    .input_result {
        width: 150px;
    }

    .input_block--result {
        display: flex
    }

    .result_block {
        display: flex;
        justify-content: space-between;
    }

    .close-btn {
        color: red
    }

        .close-btn::after {
            border: 2px solid #F00 !important;
        }

        .close-btn:hover::after {
            border-color: red !important;
            color: red !important;
            -webkit-transform: scale(1);
            -moz-transform: scale(1);
            -ms-transform: scale(1);
            transform: scale(1);
            font-weight: bold;
        }

    .table-main tr:nth-child(2n) {
        background-color: #ecf2f9 !important;
    }
</style>
<div class="dm-overlay">
    <div class="dm-table">
        <div class="dm-cell">
            <div class="dm-modal">
                <div class="top-modal-block">
                    <label class="my-modal-title">@ViewData["Title"]</label>
                    @if (ViewBag.contractId != null && ViewBag.contractId > 0)
                    {
                        <a asp-action="GetByContractId" asp-route-contractId="@ViewBag.contractId" asp-route-returnContractId="@ViewBag.returnContractId" class="close-btn"></a>
                    }
                    @if (ViewBag.contractId == null || ViewBag.contractId == 0)
                    {
                        <a asp-controller="Contracts" asp-action="" class="close-btn"></a>
                    }
                </div>
                <hr class="modal-line" style="width:980px" />
                <form asp-action="EditSWCostByScopeWorkId" asp-route-returnContractId="@ViewBag.returnContractId" class="row">
                    <div class="cont-table">
                        <table class="table table-bordered table-striped table-main">
                            <tr>
                                <th>Период</th>
                                @foreach (var item in Model.SWCosts)
                                {
                                    <th>
                                        @item.Period?.ToString("MMMM-yyyy")
                                        <input asp-for="SWCosts[index].Period" type="text" class="form-control" hidden />
                                    </th>
                                    index++;
                                }
                                @{
                                    index = 0;
                                }
                            </tr>
                            @if (ViewBag.IsEngin == null)
                            {
                                <tr>
                                    <th>Стоимость СМР</th>
                                    @foreach (var item in Model.SWCosts)
                                    {
                                        <td class="text-end"><input name="SWCosts[@index].SmrCost" type="text" class="form-control cost SmrCost" value="@item.SmrCost" /></td>
                                        index++;
                                    }
                                    @{
                                        index = 0;
                                    }
                                </tr>
                                <tr>
                                    <th>Стоимость ПНР</th>
                                    @foreach (var item in Model.SWCosts)
                                    {
                                        <td class="text-end"><input name="SWCosts[@index].PnrCost" type="text" class="form-control cost PnrCost" value="@item.PnrCost" /></td>
                                        index++;
                                    }
                                    @{
                                        index = 0;
                                    }
                                </tr>
                                <tr>
                                    <th>Стоимость оборудования</th>
                                    @foreach (var item in Model.SWCosts)
                                    {
                                        <td class="text-end"><input name="SWCosts[@index].EquipmentCost" type="text" class="form-control cost EquipmentCost" value="@item.EquipmentCost" /></td>
                                        index++;
                                    }
                                    @{
                                        index = 0;
                                    }
                                </tr>
                                <tr>
                                    <th>Стоимость прочих работ и услуг</th>
                                    @foreach (var item in Model.SWCosts)
                                    {
                                        <td class="text-end"><input name="SWCosts[@index].OtherExpensesCost" type="text" class="form-control cost OtherExpensesCost" value="@item.OtherExpensesCost" /></td>
                                        index++;
                                    }
                                    @{
                                        index = 0;
                                    }
                                </tr>
                                <tr>
                                    <th>Стоимость доп. работ</th>
                                    @foreach (var item in Model.SWCosts)
                                    {
                                        <td class="text-end"><input name="SWCosts[@index].AdditionalCost" type="text" class="form-control cost" value="@item.AdditionalCost" /></td>
                                        index++;
                                    }
                                    @{
                                        index = 0;
                                    }
                                </tr>
                                <tr>
                                    <th>Стоимость материалов заказчика (справочно)</th>
                                    @foreach (var item in Model.SWCosts)
                                    {
                                        <td class="text-end"><input name="SWCosts[@index].MaterialCost" type="text" class="form-control cost" value="@item.MaterialCost" /></td>
                                        index++;
                                    }
                                    @{
                                        index = 0;
                                    }
                                </tr>                               
                            }
                            else
                            {
                                <tr>
                                    <th>Объем работ</th>
                                    @foreach (var item in Model.SWCosts)
                                    {
                                        <td class="text-end"><input name="SWCosts[@index].SmrCost" type="text" class="form-control cost" value="@item.SmrCost" /></td>
                                        index++;
                                    }
                                    @{
                                        index = 0;
                                    }
                                </tr>                                
                            }
                            @foreach (var item in Model.SWCosts)
                            {
                                <input asp-for="SWCosts[index].IsOwnForces" hidden />
                                <input asp-for="SWCosts[index].Id" hidden />
                                <input asp-for="SWCosts[index].ScopeWorkId" hidden />
                                index++;
                            }
                            <input asp-for="ContractId" hidden />
                            <input asp-for="IsOwnForces" hidden />
                            <input asp-for="IsChange" hidden />
                            <input asp-for="AmendmentId" hidden />
                            <input asp-for="ChangeScopeWorkId" hidden />                            
                        </table>
                    </div>
                    <div class="form-group mt-3 result_block">
                        @{
                            var contractPrice = (decimal)ViewData["contractPrice"];
                            var sum = sumSmr + sumPnr + sumEquip + sumOther;
                            var result = contractPrice - sum;
                            <div class="input_block--result">
                                <div class="input-group">
                                    <span class="input-group-text">Контрактная цена:</span>

                                    <input class="input_result" id="sumTarget" value="@contractPrice.ToString("N2")" readonly />
                                </div>
                                <div class="input-group">
                                    <span class="input-group-text">Введенная плановая сумма:</span>
                                    <input class="input_result" id="sumTargetWork" value="@sum?.ToString("N2")" readonly />
                                </div>
                                <div class="input-group">
                                    <span class="input-group-text">Разница </span>
                                    <input class=" input_result" id="result" value="@result?.ToString("N2")" readonly />
                                </div>

                            </div>
                        }
                        <span id="text_error" class="text_error"></span>                       

                        <input type="submit" value="Редактировать" id="createButton" class="btn btn-primary" />

                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(function ($) {
            var allCost = $(".cost")
            for (let el of allCost) {
                digits_float(el)
            }
            $('body').on('input', '.cost', function (e) {
                digits_float(this);
            });
        });
        check();
        $('body').on('input', '.SmrCost', function (e) {
            digits_float(this);
            check();
        });
        $('body').on('input', '.PnrCost', function (e) {
            digits_float(this);
            check();
        });
        $('body').on('input', '.EquipmentCost', function (e) {
            digits_float(this);
            check();
        });
        $('body').on('input', '.OtherExpensesCost', function (e) {
            digits_float(this);
            check();
        });

        function check() {
            let btn = document.getElementById("createButton");

            let SmrCost = $(".SmrCost");
            let PnrCost = $(".PnrCost");
            let EquipmentCost = $(".EquipmentCost");
            let OtherExpensesCost = $(".OtherExpensesCost");
            let sum = 0;
            let result = 0;
            for (let item of SmrCost) {
                const regExp = /,/g;
                let num = item.value.replaceAll(' ', '').replace(regExp, '.')
                sum += +num;
            }
            for (let item of PnrCost) {
                const regExp = /,/g;
                let num = item.value.replaceAll(' ', '').replace(regExp, '.')
                sum += +num;
            }
            for (let item of EquipmentCost) {
                const regExp = /,/g;
                let num = item.value.replaceAll(' ', '').replace(regExp, '.')
                sum += +num;
            }
            for (let item of OtherExpensesCost) {
                const regExp = /,/g;
                let num = item.value.replaceAll(' ', '').replace(regExp, '.')
                sum += +num;
            }
            sum = Math.round(sum * 100) / 100;
            const regExp = /,/g;
            let o = document.querySelector("#sumTarget").value.replace(regExp, '.');
            o = o.replace(/\s+/g, '');
            let contractPrice = +o;

            result = contractPrice - sum;
            if (result === 0) {
                $("#result").focus(function () { $(this).addClass("focused") });
                btn.removeAttribute('disabled')
                $('#text_error').text('')



            } else {
                btn.setAttribute('disabled', true)
                $('#text_error').text('Сумма не сходится!')

            }
            $("#sumTargetWork").val(sum);
            $("#result").val(result.toFixed(2));
        }
    </script>
}