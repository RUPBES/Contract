@using MvcLayer.Models;
@inject BusinessLayer.Interfaces.ContractInterfaces.IContractService Contract
@model IEnumerable<MvcLayer.Models.ScopeWorkViewModel>

@{
    ViewData["Title"] = "Список объемов работ";
}

<style>

    .close-btn {
        color: red
    }

    .dm-modal {
        background-color: lightsteelblue;
    }

    .close-btn::after {
        border: 2px solid #F00 !important;
    }

    .close-btn:hover::after {
        border-color: red !important;
        color: red !important;
        -webkit-transform: scale(1);
        -moz-transform: scale(1);
        -ms-transform: scale(1);
        transform: scale(1);
        font-weight: bold;
    }
</style>
<div class="dm-overlay">
    <div class="dm-table">
        <div class="dm-cell">
            <div class="dm-modal">
                <div class="top-modal-block">
                    <label class="my-modal-title">@ViewData["Title"]</label>
                    @if (Model?.FirstOrDefault()?.ContractId != null && Model?.FirstOrDefault()?.ContractId > 0)
                    {
                        <a asp-controller="Contracts" asp-action="Details" asp-route-id="@Model?.FirstOrDefault()?.ContractId" class="close-btn"></a>
                    }
                    @if (Model?.FirstOrDefault()?.ContractId == null || Model?.FirstOrDefault()?.ContractId == 0)
                    {
                        <a asp-controller="Contracts" asp-action="" class="close-btn"></a>
                    }
                </div>
                <hr class="modal-line" />
                <table class="table table-striped table-bordered table-main" id="contractTable">
                    <thead>
                        <tr>
                            <th>
                                Период
                            </th>
                            <th>
                                Стоимость работ согласно графику
                            </th>
                            <th>
                                Стоимость СМР
                            </th>
                            <th>
                                Стоимость ПНР
                            </th>
                            <th>
                                Стоимость доп. работ
                            </th>
                            <th>
                                Стоимость оборудования
                            </th>
                            <th>
                                Прочие работы, услуги
                            </th>
                            <th>
                                Стоимость материалов
                            </th>
                            <th>
                                Договор
                            </th>
                            <th>
                                Изменено?
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (ScopeWorkViewModel item in Model)
                        {
                            <tr>
                                <td>
                                    @item.Period?.ToString("MMM yyyy")
                                </td>
                                <td>
                                    @item.CostNds?.ToString("N2")
                                </td>
                                <td>
                                    @item.SmrCost?.ToString("N2")
                                </td>
                                <td>
                                    @item.PnrCost?.ToString("N2")
                                </td>
                                <td>
                                    @item.AdditionalCost?.ToString("N2")
                                </td>
                                <td>
                                    @item.EquipmentCost?.ToString("N2")
                                </td>
                                <td>
                                    @item.OtherExpensesCost?.ToString("N2")
                                </td>
                                <td>
                                    @item.MaterialCost?.ToString("N2")
                                </td>
                                <td>
                                    @if (@item.ContractId is not null)
                                    {
                                        var d = Contract.GetById((int)@item.ContractId);
                                        <span>@d.Number</span>
                                    }

                                </td>
                                <td>
                                    @if (@item.IsChange == true)
                                    {
                                        <span>Изменено: @item.ChangeScopeWorkId</span>
                                    }
                                </td>
                                <td>
                                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>
        </div>
    </div>
</div>