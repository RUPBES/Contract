@using BusinessLayer.Helpers
@model MvcLayer.Models.ScopeWorkViewModel
@inject BusinessLayer.Interfaces.ContractInterfaces.ISWCostService SWCosts
@inject BusinessLayer.Interfaces.ContractInterfaces.IScopeWorkService ScopeWork
@inject BusinessLayer.Interfaces.CommonInterfaces.IHttpHelper HttpHelper


@{
    var http = new HttpContextAccessor();
    var permissions = HttpHelper.GetPermissionForUser(http);
    var isGRP_Contract = permissions.GroupeName.Contains(ConstantsApp.GRP_CONTRACT);

    if (ViewBag.IsEngin != null)
    {
        ViewData["Title"] = "Объем услуг";
    }
    else
    {
        ViewData["Title"] = "Объем работ";
    }
    var actionReturn = ViewBag.IsEngin != null ? "Engineerings" : null;
    var contractId = ViewBag.contractId;
    int backId = 0;
    if (ViewBag.returnContractId == 0)
        backId = ViewBag.contractId;
    else backId = ViewBag.returnContractId;
}

<style>
    .dm-modal {
        background-color: lightsteelblue;
    }

    .close-btn {
        color: red
    }

        .close-btn::after {
            border: 2px solid #F00 !important;
        }

        .close-btn:hover::after {
            border-color: red !important;
            color: red !important;
            -webkit-transform: scale(1);
            -moz-transform: scale(1);
            -ms-transform: scale(1);
            transform: scale(1);
            font-weight: bold;
        }
</style>

<div class="dm-overlay">
    <div class="dm-table">
        <div class="dm-cell">
            <div class="dm-modal">
                <div class="top-modal-block">
                    <div>
                        <label class="my-modal-title">@ViewData["Title"]</label>
                        @{
                            var amendment = ScopeWork.GetAmendmentByScopeId(Model.Id);
                            if (amendment != null)
                            {
                                <span style="font-weight:bold">@amendment.Number от @amendment.Date.Value.ToString("dd MMMM yyyy")</span>
                            }
                            else
                            {
                                <span style="font-weight:bold">По контракту</span>
                            }
                        }
                        <div id="DivEdit" class="icon edit" title="Редактировать">
                            <a asp-action="EditSWCostByScopeWorkId" asp-route-id="@Model.Id" asp-route-contractId="@Model.ContractId"
                               asp-route-returnContractId="@ViewBag.returnContractId"></a>
                        </div>
                        @if (amendment != null)
                        {
                            <div id="DivDelete" class="icon delete" title="Удалить">
                                <a onclick="confirm(@Model.Id)"></a>
                            </div>
                        }
                    </div>
                    @if (backId != null && backId > 0)
                    {
                        <a asp-controller="Contracts" asp-action="Details" asp-route-id="@backId" class="close-btn"></a>
                    }
                    @if (backId == null || backId == 0)
                    {
                        <a asp-controller="Contracts" asp-action="@actionReturn" class="close-btn"></a>
                    }
                </div>
                <hr class="modal-line" />

                <div class="modal-overflow-70">
                    <table class="table table-striped table-main table-hover ">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Period)
                                </th>
                                @if (ViewBag.IsEngin == null)
                                {
                                    <th>
                                        @Html.DisplayNameFor(model => model.CostNds)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.SmrCost)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.PnrCost)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.AdditionalCost)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.EquipmentCost)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.OtherExpensesCost)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.CostNoNds)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.MaterialCost)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.GenServiceCost)
                                    </th>
                                }
                                else
                                {
                                    <th>
                                        Объем услуг
                                    </th>
                                }
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.SWCosts.OrderBy(x => x.Period))
                            {
                                <tr>
                                    <td>
                                        @item.Period?.ToString("MMMM yyyy")
                                    </td>
                                    @if (ViewBag.IsEngin == null)
                                    {

                                        <td class="text-end">
                                            @item.CostNds?.ToString("N2")
                                        </td>
                                        <td class="text-end">
                                            @item.SmrCost?.ToString("N2")
                                        </td>
                                        <td class="text-end">
                                            @item.PnrCost?.ToString("N2")
                                        </td>
                                        <td class="text-end">
                                            @item.AdditionalCost?.ToString("N2")
                                        </td>
                                        <td class="text-end">
                                            @item.EquipmentCost?.ToString("N2")
                                        </td>
                                        <td class="text-end">
                                            @item.OtherExpensesCost?.ToString("N2")
                                        </td>
                                        <td class="text-end">
                                            @item.CostNoNds?.ToString("N2")
                                        </td>
                                        <td class="text-end">
                                            @item.MaterialCost?.ToString("N2")
                                        </td>
                                        <td class="text-end">
                                            @item.GenServiceCost?.ToString("N2")
                                        </td>
                                    }
                                    else
                                    {
                                        <td class="text-end">
                                            @item.SmrCost?.ToString("N2")
                                        </td>
                                    }
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script>        
        function confirm(id) {
            $.ajax({
                type: 'POST',
                url: '@Url.Action("ShowDelete", "ScopeWorks")',
                contentType: "application/html; charset=utf-8",
                dataType: 'html',
                success: function (result) {
                    $('#dialogContent').html(result);
                    $('#modDialog').modal({ backdrop: false });
                    $('#modDialog').modal('show');

                    let elementDeleteButton = document.querySelectorAll('#modal-button-delete')                    
                    elementDeleteButton[0].addEventListener('click', () => {
                        $.ajax({
                            type: 'POST',
                            url: '@Url.Action("ShowResultDelete", "ScopeWorks")',
                            dataType: 'html',
                            data: { id: id },
                            success: function (result) {
                                let buttonElement = document.querySelectorAll('#dialogContent')
                                $('#dialogContent').html(result);
                            },
                            error: function (result) {
                                $.ajax({
                                    type: 'POST',
                                    url: '@Url.Action("Message", "Home")',
                                    dataType: 'html',
                                    data: { message: "Во время удаления произошла ошибка.", header: "Ошибка", textButton: "Плохо" },
                                    success: function (result) {
                                        $('#dialogContent').html(result);
                                    }
                                });
                            }
                        });
                    })
                },
                error: function (result) {
                    alert("Ошибка отображения");
                }
            })

        }
    </script>
}
