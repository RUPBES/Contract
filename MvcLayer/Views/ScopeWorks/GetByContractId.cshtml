@model IEnumerable<MvcLayer.Models.ScopeWorkViewModel>
@inject BusinessLayer.Interfaces.ContractInterfaces.ISWCostService SWCosts

@{
    ViewData["Title"] = "Объем работ";
    var actionReturn = ViewBag.IsEngineering == true ? "Engineerings" : null;
}

<div class="dm-overlay">
    <div class="dm-table">
        <div class="dm-cell">
            <div class="dm-modal">
                <div class="top-modal-block">
                    <label class="my-modal-title">@ViewData["Title"]</label>
                    @if (Model?.FirstOrDefault()?.ContractId != null && Model?.FirstOrDefault()?.ContractId > 0)
                    {
                        <a asp-controller="Contracts" asp-action="Details" asp-route-id="@Model?.FirstOrDefault()?.ContractId" class="close-btn"></a>
                    }
                    @if (Model?.FirstOrDefault()?.ContractId == null || Model?.FirstOrDefault()?.ContractId == 0)
                    {
                        <a asp-controller="Contracts" asp-action="@actionReturn"  class="close-btn"></a>
                    }
                </div>
                <hr class="modal-line" />
                <table class="table">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Period)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.CostNoNds)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.CostNds)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.SmrCost)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.PnrCost)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.EquipmentCost)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.OtherExpensesCost)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.AdditionalCost)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.MaterialCost)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.GenServiceCost)
                            </th>
                            
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var scope in Model)
                        {                           
                            @foreach (var item in SWCosts.Find(x => x.ScopeWorkId == scope.Id))
                            {
                                <tr>
                                    <td>
                                        @item.Period?.ToString("MMMM-yyyy")
                                    </td>
                                    <td class="text-end">
                                        @string.Format("{0:n}",item.CostNoNds)                                        
                                    </td>
                                    <td class="text-end">
                                        @string.Format("{0:n}",item.CostNds)                                        
                                    </td>
                                    <td class="text-end">
                                        @string.Format("{0:n}",item.SmrCost)
                                    </td>
                                    <td class="text-end">
                                        @string.Format("{0:n}",item.PnrCost)
                                    </td>
                                    <td class="text-end">
                                        @string.Format("{0:n}",item.EquipmentCost)
                                    </td>
                                    <td class="text-end">
                                        @string.Format("{0:n}",item.OtherExpensesCost)
                                    </td>
                                    <td class="text-end">
                                        @string.Format("{0:n}",item.AdditionalCost)
                                    </td>
                                    <td class="text-end">
                                        @string.Format("{0:n}",item.MaterialCost)
                                    </td>
                                    <td class="text-end">
                                        @string.Format("{0:n}",item.GenServiceCost)
                                    </td>
                                    
                                    @* <td>
                                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                                    </td> *@
                                </tr>
                            }

                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
