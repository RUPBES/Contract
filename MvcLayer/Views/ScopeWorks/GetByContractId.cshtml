@model IEnumerable<MvcLayer.Models.ScopeWorkViewModel>
@inject BusinessLayer.Interfaces.ContractInterfaces.ISWCostService SWCosts

@{
    ViewData["Title"] = "GetByContractId";
}

<h1>Объем работ</h1>
<a asp-action="Details" asp-controller="Contracts" asp-route-id="@Model.FirstOrDefault()?.ContractId">Вернуться к договору</a>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Period)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CostNoNds)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CostNds)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SmrCost)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PnrCost)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EquipmentCost)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OtherExpensesCost)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AdditionalCost)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MaterialCost)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GenServiceCost)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsOwnForces)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsChange)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ChangeScopeWork)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Contract)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var scope in Model)
        {
           @*  <tr>                
                <td>@scope.Contract.Number</td>
                <td>@scope.ChangeScopeWorkId</td>
            </tr> *@
            @foreach (var item in SWCosts.Find(x => x.ScopeWorkId == scope.Id))
            {
                <tr>
                    <td>
                        @item.Period
                    </td>
                    <td>
                        @item.CostNoNds
                    </td>
                    <td>
                        @item.CostNds
                    </td>
                    <td>
                        @item.SmrCost
                    </td>
                    <td>
                        @item.PnrCost
                    </td>
                    <td>
                        @item.EquipmentCost
                    </td>
                    <td>
                        @item.OtherExpensesCost
                    </td>
                    <td>
                        @item.AdditionalCost
                    </td>
                    <td>
                        @item.MaterialCost
                    </td>
                    <td>
                        @item.GenServiceCost
                    </td>
                    <td>
                        @item.IsOwnForces                
                        </td>
                    <td>
                        @* @item.IsChange *@
                    </td>
                    <td>
                       @*  @item.ChangeScopeWork.Id *@
                    </td>
                    <td>
                        @* @item.Contract.Id *@
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
            
        }
    </tbody>
</table>
