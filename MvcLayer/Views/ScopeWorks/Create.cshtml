    <a asp-action="Details" asp-controller="Contracts" asp-route-id="@d[0]?.ContractId">Back to List</a>
</div> *@

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
