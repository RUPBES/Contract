@using MvcLayer.Models;
@using Newtonsoft.Json;
@model MvcLayer.Models.SWCostViewModel

@{
    ViewData["Title"] = "Редактирование объема работ";  
}

<style>
    .cont-table {
        overflow-x: scroll;
    }
    th,
    td {
        min-width: 250px;
    }


    .dm-modal {
        background-color: lightsteelblue;
    }

    .close-btn {
        color: red
    }

        .close-btn::after {
            border: 2px solid #F00 !important;
        }

        .close-btn:hover::after {
            border-color: red !important;
            color: red !important;
            -webkit-transform: scale(1);
            -moz-transform: scale(1);
            -ms-transform: scale(1);
            transform: scale(1);
            font-weight: bold;
        }
</style>
<div class="dm-overlay">
    <div class="dm-table">
        <div class="dm-cell">
            <div class="dm-modal">
                <div class="top-modal-block">
                    <label class="my-modal-title">@ViewData["Title"]</label>
                    @if (ViewBag.contractId != null && ViewBag.contractId > 0)
                    {
                        <a asp-action="GetByContractId" asp-route-contractId="@ViewBag.contractId" asp-route-returnContractId="@ViewBag.returnContractId" class="close-btn"></a>
                    }
                    @if (ViewBag.contractId == null || ViewBag.contractId == 0)
                    {
                        <a asp-controller="Contracts" asp-action="" class="close-btn"></a>
                    }
                </div>
                <hr class="modal-line" style="width:980px" />
                <form asp-action="Edit" asp-route-contractId="@ViewData["contractId"]" asp-route-returnContractId="@ViewBag.returnContractId" class="row">
                    <div class="cont-table">
                        <table class="table table-bordered table-striped table-main">
                            <tr>
                                <th>Период</th>
                                <td>
                                    @Model.Period?.ToString("MMMM-yyyy")
                                    <input asp-for="Period" type="text" class="form-control" hidden />
                                </td>                                
                            </tr>
                            @if (ViewBag.IsEngin == null)
                            {
                                <tr>
                                    <th>Стоимость СМР</th>
                                    <td class="text-end"><input name="SmrCost" value="@Model.SmrCost" type="text" class="form-control costs_contract cost" data-autonumeric /></td>
                                </tr>
                                <tr>
                                    <th>Стоимость ПНР</th>
                                    <td class="text-end"><input name="PnrCost" value="@Model.PnrCost" class="form-control cost" data-autonumeric /></td>
                                </tr>
                                <tr>
                                    <th>Стоимость оборудования</th>
                                    <td class="text-end"><input name="EquipmentCost" value="@Model.EquipmentCost" class="form-control cost" data-autonumeric /></td>
                                </tr>
                                <tr>
                                    <th>Стоимость прочих работ и услуг</th>
                                    <td class="text-end"><input name="OtherExpensesCost" value="@Model.OtherExpensesCost" class="form-control cost" data-autonumeric /></td>
                                </tr>
                                <tr>
                                    <th>Стоимость доп. работ</th>
                                    <td class="text-end"><input name="AdditionalCost" value="@Model.AdditionalCost" class="form-control cost" data-autonumeric /></td>
                                </tr>
                                <tr>
                                    <th>Стоимость материалов заказчика (справочно)</th>
                                    <td class="text-end"><input name="MaterialCost" value="@Model.MaterialCost" class="form-control cost" data-autonumeric /></td>
                                </tr>
                            }
                            else
                            {
                                <tr>
                                    <th>Объем работ</th>
                                    <td class="text-end"><input name="SmrCost" value="@Model.SmrCost" type="text" class="form-control costs_contract cost" data-autonumeric /></td>
                                </tr>
                            }
                            <input asp-for="GenServiceCost" hidden />
                            <input asp-for="IsOwnForces" hidden />
                            <input asp-for="ScopeWorkId" hidden />
                            <input asp-for="Id" hidden />
                        </table>
                    </div>
                    <div class="form-group btn_block">
                        <input type="submit" value="Редактировать" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(function ($) {
            var allCost = $(".cost")
            for (let el of allCost) {
                digits_float(el)
            }
            $('body').on('input', '.cost', function (e) {
                digits_float(this);
            });            
        });
    </script>
}