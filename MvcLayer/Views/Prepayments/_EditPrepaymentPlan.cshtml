@using MvcLayer.Models;
@using MvcLayer.Models.Data;
@using Newtonsoft.Json;
@model List<PrepaymentPlanViewModel>

@inject BusinessLayer.Interfaces.ContractInterfaces.IContractService Contract
@{
    int index = 0;
}
<style>
    .cont-table {
        overflow-x: auto;
    }

    th,
    td {
        min-width: 250px;
    }

    .input-group {
        width: auto;
    }

    .dm-modal {
        background-color: lightsteelblue;
        max-width: 1200px;
    }

    .input_result {
        width: 150px;
    }

    .result_block {
        display: flex;
        justify-content: space-between;
    }

    .input_block--result {
        display: flex
    }

    .text_error {
        color: red;
        font-weight: 700;
    }


    #txt1.focused {
        border-color: red;
    }

    .close-btn {
        color: red;
    }

        .close-btn::after {
            border: 2px solid #F00 !important;
        }

        .close-btn:hover::after {
            border-color: red !important;
            color: red !important;
            -webkit-transform: scale(1);
            -moz-transform: scale(1);
            -ms-transform: scale(1);
            transform: scale(1);
            font-weight: bold;
        }

    .table-main tr:nth-child(2n) {
        background-color: #ecf2f9 !important;
    }
</style>

<form asp-action="EditPrepaymentPlan" class="row" data-ajax="true" method="post" enctype="multipart/form-data"
       data-ajax-update="#ContentCreate">
    <div class="cont-table">
        <table class="table table-bordered table-main table-hover">
            <thead>
                <tr>
                    <th>Период</th>
                    @foreach (var item in Model)
                    {
                        <th>
                            @item.Period?.ToString("MMMM yyyy")
                            <input asp-for="@Model[index].Period" type="text" class="form-control" value="@item.Period" hidden />
                            <input asp-for="@Model[index].Id" type="text" class="form-control" value="@item.Id" hidden />
                            <input asp-for="@Model[index].PrepaymentId" type="text" class="form-control" value="@item.PrepaymentId" hidden />
                        </th>
                        index++;
                    }
                    @{
                        index = 0;
                    }
                </tr>
            </thead>
            <tbody>
                @if (ViewBag.Current != null)
                {
                    <tr>
                        <th>Текущие авансы:</th>
                        @foreach (var item in Model)
                        {
                            if (item.CurrentValue != null && item.CurrentValue != 0)
                            {
                                <td><input name="[@index].CurrentValue" value="@item.CurrentValue" type="text" class="form-control cost" /></td>
                            }
                            else
                            {
                                <td><input name="[@index].CurrentValue" type="text" class="form-control cost" /></td>
                            }
                            index++;
                        }
                        @{
                            index = 0;
                        }
                    </tr>
                }
                @if (ViewBag.Target != null)
                {
                    <tr>
                        <th>Целевые авансы</th>
                        @foreach (var item in Model)
                        {
                            if (item.TargetValue != null && item.TargetValue != 0)
                            {
                                <td><input name="[@index].TargetValue" value="@item.TargetValue" type="text" class="target form-control cost" /></td>
                            }
                            else
                            {
                                <td><input name="[@index].TargetValue" type="text" class="target form-control cost" /></td>
                            }
                            index++;
                        }
                        @{
                            index = 0;
                        }
                    </tr>
                    <tr>
                        <th>Отработка целевых авансов</th>
                        @foreach (var item in Model)
                        {
                            if (item.WorkingOutValue != null && item.WorkingOutValue != 0)
                            {
                                <td><input name="[@index].WorkingOutValue" value="@item.WorkingOutValue" type="text" class="targetWork form-control cost" /></td>
                            }
                            else
                            {
                                <td><input name="[@index].WorkingOutValue" type="text" class="targetWork form-control cost" /></td>
                            }
                            index++;
                        }
                        @{
                            index = 0;
                        }
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="form-group mt-3 result_block">
        @if (ViewBag.Target != null)
        {
            var target = Model.Sum(x => x.TargetValue);
            var workTarget = Model.Sum(x => x.WorkingOutValue);
            var result = target - workTarget;
            <div class="input_block--result">
                <div class="input-group">
                    <span class="input-group-text">Целевой:</span>

                    <input class="input_result" id="sumTarget" value="@target?.ToString("N2")" readonly />
                </div>
                <div class="input-group">
                    <span class="input-group-text">Отработка целевого:</span>
                    <input class="input_result" id="sumTargetWork" value="@workTarget?.ToString("N2")" readonly />
                </div>
                <div class="input-group">
                    <span class="input-group-text">Разница </span>
                    <input class=" input_result" id="result" value="@result?.ToString("N2")" readonly />
                </div>

            </div>
        }
        <span id="text_error" class="text_error"></span>

        <input type="submit" value="Изменить" id="createButton" class="btn btn-primary" />

    </div>
</form>
<script>    
    $(function ($) {
        var allCost = $(".cost")
        for (let el of allCost) {
            digits_float(el)
        }
        $('body').on('input', '.cost', function (e) {
            digits_float(this);
        });
    });
    $('body').on('input', '.target', function (e) {
        digits_float(this);
        check();
    });
    $('body').on('input', '.targetWork', function (e) {
        digits_float(this);
        check();
    });
    function check() {
        let btn = document.getElementById("createButton");

        let target = $(".target");
        let targetWork = $(".targetWork");
        let sumTarget = 0;
        let sumTargetWork = 0;
        let result = 0;
        for (let item of target) {
            const regExp = /,/g;
            let num = item.value.replaceAll(' ', '').replace(regExp, '.')
            sumTarget += +num;
        }
        for (let item of targetWork) {
            const regExp = /,/g;
            let num = item.value.replaceAll(' ', '').replace(regExp, '.')
            sumTargetWork += +num;
        }
        sumTarget = Math.round(sumTarget * 100) / 100;
        sumTargetWork = Math.round(sumTargetWork * 100) / 100;
        result = sumTarget - sumTargetWork;
        if (result === 0) {
            $("#result").focus(function () { $(this).addClass("focused") });
            btn.removeAttribute('disabled')
            $('#text_error').text('')
        } else {
            btn.setAttribute('disabled', true)
            $('#text_error').text('Сумма не сходится!')
        }

        $("#sumTarget").val(sumTarget);
        $("#sumTargetWork").val(sumTargetWork);
        $("#result").val(result.toFixed(2));
    }
    let btn = document.getElementById("createButton");
    btn.addEventListener("click", function () {
        var selectAmendment = document.getElementById("Amendment");        
        selectAmendment.selectedIndex = 0;
    });
</script>

