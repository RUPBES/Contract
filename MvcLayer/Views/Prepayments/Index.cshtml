@using MvcLayer.Models;
@inject BusinessLayer.Interfaces.ContractInterfaces.IContractService Contract
@model IEnumerable<MvcLayer.Models.PrepaymentViewModel>
@inject BusinessLayer.Interfaces.CommonInterfaces.IHttpHelper HttpHelper


@{
    var http = new HttpContextAccessor();
    var permissions = HttpHelper.GetPermissionForUser(http);
    ViewData["Title"] = "Список авансов";
}

<h1>@ViewData["Title"]</h1>

<table class="table table-striped table-bordered table-main" id="contractTable">
    <thead>
        <tr>
            <th>
                Период
            </th>
            <th>
                Текущие авансы
            </th>
            <th>
                Текущие авансы по факту
            </th>
            <th>
                Целевые Авансы
            </th>
            <th>
                Целевые Авансы по факту
            </th>
            <th>
                Отработка целевых
            </th>
            <th>
                Отработка целевых фактическое
            </th>
            <th>
                Договор
            </th>
            <th>
                Изменено?
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (PrepaymentViewModel item in Model)
        {
            <tr>
                <td>
                    @item.Period?.ToString("MMM yyyy")
                </td>
                <td>
                    @item.CurrentValue?.ToString("N2")
                </td>
                <td>
                    @item.CurrentValueFact?.ToString("N2")
                </td>
                <td>
                    @item.TargetValue?.ToString("N2")
                </td>
                <td>
                    @item.TargetValueFact?.ToString("N2")
                </td>
                <td>
                    @item.WorkingOutValue?.ToString("N2")
                </td>
                <td>
                    @item.WorkingOutValueFact?.ToString("N2")
                </td>
                <td>
                    @if (@item.ContractId is not null)
                    {
                        @item.Contract?.Number
                    }
                </td>
                <td>
                    @if (@item.IsChange == true)
                    {
                        <span>Изменено: @item.ChangePrepaymentId</span>
                    }
                </td>
                <td>
                    @if (permissions is not null && (permissions.IsDeleter || permissions.IsAdmin))
                    {
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
<div>
    <a class="button" asp-action="Index" asp-controller="Home">Вернуться на главную</a>
</div>
@section Scripts {
    <script type="text/javascript">

    </script>
}

