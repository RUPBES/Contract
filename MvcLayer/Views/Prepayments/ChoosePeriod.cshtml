@model MvcLayer.Models.PeriodChooseViewModel
@using BusinessLayer.Models;
@inject BusinessLayer.Interfaces.ContractInterfaces.IAmendmentService Amendment
@inject BusinessLayer.Interfaces.ContractInterfaces.IPrepaymentService Prepayment
@inject BusinessLayer.Interfaces.ContractInterfaces.IContractService Contract
<style>
    .title-warning {
        display: flex;
        justify-content: center;
        font-family: Inter;
        font-size: 20px;
        font-style: normal;
        font-weight: 700;
        line-height: 22px;
        letter-spacing: -0.34px;
        border-radius: 10px;
        color: #fff;
        background-color: #e83c14;
        border-color: #e83c14;
        padding: 0.5rem;
    }

    label {
        margin: 10px auto;
    }

    #target {
        margin: 100px auto;
        width: 50%;
    }

    #chooseAmendment {
        margin: 0 auto 30px auto;
    }

    .label_agreement {
        font-weight: bold;
    }

    .dm-modal {
        max-width: 1200px;
    }

    .img_newAgr {
        width: 24px;
        height: 24px;
        margin-right: 3px;
    }
</style>
@{
    ViewData["Title"] = "Выбрать период";
    int backId = 0;
    if ((int)ViewData["returnContractId"] == 0)
        backId = (int)ViewData["contractId"];
    else backId = (int)ViewData["returnContractId"];
    var contract = Contract.GetById((int)Model.ContractId);
}

<div class="dm-overlay">
    <div class="dm-table">
        <div class="dm-cell">
            <div class="dm-modal" style="width: 850px; height:440px">
                <div class="top-modal-block">
                    <label class="my-modal-title">@ViewData["Title"]</label>
                    @if (backId != null && backId > 0)
                    {
                        <a asp-controller="Contracts" asp-action="Details" asp-route-id="@backId" class="close-btn"></a>
                    }
                    @if (backId == null || backId == 0)
                    {
                        <a asp-controller="Contracts" asp-action="" class="close-btn"></a>
                    }
                </div>
                <hr class="modal-line" />
                @{
                    var listAmendment = Prepayment.GetFreeAmendment((int)Model?.ContractId);
                    if (listAmendment.Count() > 0)
                    {
                        <form id="target" asp-action="CreatePeriods" class="row" method="post" enctype="multipart/form-data" asp-route-contractId="@ViewBag.contractId" asp-route-returnContractId="@ViewBag.returnContractId">
                            <input asp-for="ContractId" value="@Model?.ContractId" hidden />
                            <input asp-for="ChangePrepaymentId" value="@Model?.ChangePrepaymentId" hidden />
                            <input asp-for="IsChange" value="@Model?.IsChange" hidden />
                            <input asp-for="PeriodStart" type="datetime" value="@Model?.PeriodStart" hidden />
                            <input asp-for="PeriodEnd" type="datetime" value="@Model?.PeriodEnd" hidden />

                            <div class="form-group col-12">
                                <div class="title-warning"><span>Авансы для данного договора заполнены</span></div>
                            </div>
                            <div id="chooseAmendment" class="row">
                                <div class="form-group">
                                    <label class="control-label label_agreement">Выбрать доп.соглашение:</label>
                                    <select name="AmendmentId" id="AmendId" class="form-control select">
                                        <option disabled selected>Выберите</option>
                                        {
                                        @{

                                        }
                                        @foreach (AmendmentDTO org in listAmendment)
                                        {
                                            <option value="@org.Id">Номер: @org.Number - Изменено: @org.ContractChanges</option>
                                        }
                                        }
                                    </select>
                                </div>
                            </div>
                        </form>
                    }
                    else
                    {
                        <div class="d-inline-block alert alert-primary">                           
                                <label class="control-label">Аванс заполнен</label>                            
                        </div>
                        <div class="label-block alert alert-primary">
                            <label class="control-label">Отсутствуют незаполненные дополнительные соглашения</label>
                        </div>
                        <div class="btn-block">
                            <a class="btn btn-success" asp-controller="Amendments" asp-action="Create" asp-route-contractId="@contract.Id" asp-route-isPrepament="true"
                               asp-route-returnContractId="@ViewBag.returnContractId"><img class="img_newAgr" src="~/icons/plus_icon.png" />+ Доп. соглашение</a>
                            <a class="btn btn-warning" asp-controller="Prepayments" asp-action="GetByContractId" asp-route-contractId="@contract.Id"
                               asp-route-returnContractId="@ViewBag.returnContractId"><img class="img_newAgr" src="~/icons/search-file_icon.png" />Просмотр заполненных данных</a>
                        </div>
                    }
                }               
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script type="text/javascript">
        $("#AmendId").on("change", function () {
            $("#target").trigger("submit");
        });
    </script>
}