@model MvcLayer.Models.PeriodChooseViewModel
@using BusinessLayer.Models;
@inject BusinessLayer.Interfaces.ContractInterfaces.IAmendmentService Amendment
@inject BusinessLayer.Interfaces.ContractInterfaces.IPrepaymentService Prepayment

@{
    ViewData["Title"] = "Create";
    bool hasPrepayment = false;
    var scopes = Prepayment.Find(x => x.ContractId == Model.ContractId)?.FirstOrDefault();
    if (scopes is not null)
    {
        hasPrepayment = true;
    }
}
<style>
    .title-warning {
        display: flex;
        justify-content: center;
        font-family: Inter;
        font-size: 20px;
        font-style: normal;
        font-weight: 700;
        line-height: 22px;
        letter-spacing: -0.34px;
        border: solid #e83c14 1px;
        border-radius: 5px;
    }

    label {
        margin: 10px auto;
    }

    #target {
        margin: 100px auto;
        width: 50%;
    }

    #chooseAmendment {
        margin: 0 auto 30px auto;
    }
</style>
@if (hasPrepayment)
{
    <form id="target" asp-action="CreatePeriods" class="row" method="post" enctype="multipart/form-data" data-ajax="true" data-ajax-method="POST" data-ajax-mode="replace" data-ajax-update="#result">
        <input asp-for="ContractId" value="@Model?.ContractId" hidden />
        <div class="form-group col-12">
            <div class="title-warning"><span>Авансы для данного договора заполнены</span></div>
            <label for="amendCheck">Внести изменения в авансы по доп.соглашению?</label>
            <input type="checkbox" id="amendCheck" name="IsChange" value="false" />
        </div>
        <div id="chooseAmendment" class="row" hidden>
            <div class="form-group">
                <label class="control-label">Выбрать доп.соглашение</label>
                <select name="AmendmentId" id="AmendId" class="form-control select">
                    <option disabled selected>Выберите</option>
                    @foreach (AmendmentDTO org in Amendment.GetAll())
                    {
                        <option value="@org.Id">Номер: @org.Number - Изменено: @org.ContractChanges</option>
                    }
                </select>
            </div>
            <div class="row mt-3" id="date-box" hidden>
                <div class="form-group col-6 mb-3">
                    <label for="amendCheck1">Укажите начало периода</label>
                    <input asp-for=PeriodStart type="datetime" id="amendCheck1" class="datepickers" />
                </div>
                <div class="form-group col-6 mb-3">
                    <label for="amendCheck2">Укажите окончание периода</label>
                    <input asp-for=PeriodEnd type="datetime" id="amendCheck2" class="datepickers" />
                </div>
                <button class="btn btn-primary btn-sm" type="submit">Выбрать</button>

            </div>
        </div>
    </form>
}

@if (!hasPrepayment)
{
    <form id="target" asp-action="CreatePeriods" class="row" method="post" enctype="multipart/form-data" data-ajax="true" data-ajax-method="POST" data-ajax-mode="replace">
        <h4>Выбор периода авансов, предусмотренных договором</h4>
        <input asp-for="ContractId" value="@Model?.ContractId" hidden />        
        <div class="form-group col-6 mb-3">
            <label for="amendCheck1">Укажите начало периода</label>
            <input asp-for=PeriodStart type="datetime" id="amendCheck1" class="datepickers" />
        </div>
        <div class="form-group col-6 mb-3">
            <label for="amendCheck2">Укажите окончание периода</label>
            <input asp-for=PeriodEnd type="datetime" id="amendCheck2" class="datepickers" />
        </div>
        <button class="btn btn-primary  btn-sm" type="submit">Выбрать</button>
    </form>
}
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script type="text/javascript">
        $("#AmendId").on("change", function () {

            let divDates = document.querySelector("#date-box");

            if (divDates.hidden != true) {
                divDates.hidden = true;
            }
            else {
                divDates.hidden = null;
            }
        });

        $("#ownForceId").on("change", function () {

            let isOwn = $(this).prop('checked');

            if (isOwn === false) {
                $(this).attr("value", "false")
            }
            else {
                $(this).attr("value", "true")
            }

        });

        $("#amendCheck").on("change", function () {

            let isChange = $(this).prop('checked');
            let besInput = document.querySelector("#chooseAmendment");

            if (besInput.hidden != true) {
                besInput.hidden = true;
            }
            else {
                besInput.hidden = null;
            }

            if (isChange === false) {
                $(this).attr("value", "false")
            }
            else {
                $(this).attr("value", "true")
            }
        });

        $(document).ready(function () {
            // $('.js-chosen').chosen({
            //     width: '100%',
            //     no_results_text: 'Совпадений не найдено',
            //     placeholder_text_single: 'Выберите'
            // });

            datepickerNull("input.datepickersNull");
            dateTimepicker("input.datetimepickers");
            datepicker("input.datepickers");
        });
    </script>
}