@model PrepaymentStatementViewModel
@inject BusinessLayer.Interfaces.ContractInterfaces.IContractService Contract
@inject BusinessLayer.Interfaces.ContractInterfaces.IPrepaymentService Prepayment
@inject BusinessLayer.Interfaces.ContractInterfaces.IPrepaymentFactService PrepFact
@inject BusinessLayer.Interfaces.ContractInterfaces.IPrepaymentPlanService PrepPlan
@using BusinessLayer.Helpers;
@using MvcLayer.Models;

<style>
    td, tr {
        min-width: 105px;
    }
</style>

@{
    ViewData["Title"] = string.Empty;
    var contractId = ViewBag.contractId;
    int backId = 0;
    if (ViewBag.returnContractId == 0)
        backId = ViewBag.contractId;
    else backId = ViewBag.returnContractId;
    if (contractId is not null)
    {
        var number = Contract.GetById((int)contractId).Number;
        ViewData["Title"] = $"Ведомость использования авансов № {number}";
    }
    Model.listSmrWithAvans = Model.listSmrWithAvans.OrderBy(x => x.Period).ToList();
    var countSmr = 2 + Model.listSmrWithAvans.Count * 2;
}

<div class="dm-overlay">
    <div class="dm-table">
        <div class="dm-cell">
            <div class="dm-modal">
                <div class="top-modal-block">
                    <label class="my-modal-title">@ViewData["Title"]</label>
                    @if (backId != null && backId > 0)
                    {
                        <a asp-controller="Contracts" asp-action="Details" asp-route-id="@backId" class="close-btn"></a>
                    }
                    @if (backId == null || backId == 0)
                    {
                        <a asp-controller="Contracts" asp-action="" class="close-btn"></a>
                    }
                </div>
                <hr class="modal-line">
                <div style="max-height:auto; max-width:auto; overflow:scroll">
                    <table class="table table-bordered table-main table-main-short">
                        <thead>
                            <tr>
                                <th rowspan="3">
                                    <span>Объект</span>
                                </th>
                                <th rowspan="3">
                                    <span>Заказчик</span>
                                </th>
                                <th rowspan="2" colspan="2">
                                    <span>Всего по договору аванса</span>
                                </th>
                                <th colspan="3">
                                    <span>Целевой аванс, руб.</span>
                                </th>
                                <th>
                                    <span></span>
                                </th>
                                <th colspan="@countSmr">
                                    <span>СМР и Погашение аванса по месяцам, согласно графикам платежей к договору</span>
                                </th>
                            </tr>
                            <tr>
                                <th rowspan="2">
                                    <span>Получено</span>
                                </th>
                                <th rowspan="2">
                                    <span>Погашено</span>
                                </th>
                                <th rowspan="2">
                                    <span>Не погашено</span>
                                </th>
                                <th rowspan="2">
                                    <span>Документ</span>
                                </th>
                                <th rowspan="2">
                                    <span></span>
                                </th>
                                <th rowspan="2">
                                    <span>Согласно @Model.NameAmendment</span>
                                </th>
                                @foreach (var item in Model.listSmrWithAvans)
                                {
                                    <th colspan="2">
                                        <span>@item.Period?.ToString("MMMM yyyy")</span>
                                    </th>
                                }
                            </tr>
                            <tr>
                                <th>
                                    <span>Получено</span>
                                </th>
                                <th>
                                    <span>Текущего</span>
                                </th>
                                @foreach (var item in Model.listSmrWithAvans)
                                {
                                    <th>
                                        <span>Стоимость работ по графику</span>
                                    </th>
                                    <th>
                                        <span>Отработка аванса по графику</span>
                                    </th>
                                }
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td rowspan="4">
                                    <span>
                                        @Model.NameObject
                                    </span>
                                </td>
                                <td rowspan="4">
                                    <span>
                                        @Model.Client
                                    </span>
                                </td>
                                <td rowspan="4">
                                    <span>
                                        @Model.TheoryTarget?.ToString("N2")
                                    </span>
                                </td>
                                <td rowspan="4">
                                    <span>
                                        @Model.TheoryCurrent?.ToString("N2")
                                    </span>
                                </td>
                                <td rowspan="4">
                                    <span>
                                        @Model.TargetRepaid?.ToString("N2")
                                    </span>
                                </td>
                                <td rowspan="4">
                                    <span>
                                        @Model.TargetReceived?.ToString("N2")
                                    </span>
                                </td>
                                <td rowspan="4">
                                    <span>
                                        @((Model.TargetRepaid - Model.TargetReceived)?.ToString("N2"))
                                    </span>
                                </td>
                                <td rowspan="2">
                                    <span>
                                        @Model.NameAmendment
                                    </span>
                                </td>
                                <td rowspan="2">
                                    <span>
                                        План
                                    </span>
                                </td>
                                <td>
                                    <span>
                                        Целевой
                                    </span>
                                </td>
                                @foreach (var item in Model.listSmrWithAvans)
                                {
                                    <td rowspan="2">
                                        <span>
                                            @item.SmrPlan?.ToString("N2")
                                        </span>
                                    </td>
                                    <td>
                                        <span>
                                            @item.TargetPlan?.ToString("N2")
                                        </span>
                                    </td>
                                }
                            </tr>
                            <tr>
                                <td>
                                    <span>
                                        Текущий
                                    </span>
                                </td>
                                @foreach (var item in Model.listSmrWithAvans)
                                {
                                    <td>
                                        <span>
                                            @item.CurrentPlan?.ToString("N2")
                                        </span>
                                    </td>
                                }
                            </tr>
                            <tr>
                                <td rowspan="2">
                                    @foreach (var item in Model.listFiles)
                                    {
                                        <span>
                                            <a href="~/Files/GetFile?id=@item.Id" target="_blank">@item.FileName</a>
                                        </span>
                                    }
                                </td>
                                <td rowspan="2">
                                    <span>
                                        Факт
                                    </span>
                                </td>
                                <td>
                                    <span>
                                        Целевой
                                    </span>
                                </td>
                                @foreach (var item in Model.listSmrWithAvans)
                                {
                                    <td rowspan="2">
                                        <span>
                                            @item.SmrFact?.ToString("N2")
                                        </span>
                                    </td>
                                    <td>
                                        <span>
                                            @item.TargetFact?.ToString("N2")
                                        </span>
                                    </td>
                                }
                            </tr>
                            <tr>
                                <td>
                                    <span>
                                        Текущий
                                    </span>
                                </td>
                                @foreach (var item in Model.listSmrWithAvans)
                                {
                                    <td>
                                        <span>
                                            @item.CurrentFact?.ToString("N2")
                                        </span>
                                    </td>
                                }
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
