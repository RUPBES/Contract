@model MvcLayer.Models.OrganizationViewModel

@{
    var model = Model;
    ViewData["Title"] = "Редактировать";
}
<div class="dm-overlay">
    <div class="dm-table">
        <div class="dm-cell">
            <div class="dm-modal" style="max-width:700px;">
                <div class="top-modal-block">
                    <label class="my-modal-title">@ViewData["Title"]</label>
                    <a asp-controller="Organizations" asp-action="Index" class="close-btn"></a>
                </div>
                <hr class="modal-line" />
                <form asp-action="Edit" class="row">
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group col-6">
                        <label asp-for="Name" for="name"></label>
                        <div class="input-group">
                            <div class="input-group-text"><img src="~/icons/buildings.svg" /></div>
                            <input asp-for="Name" class="form-control" id="name">
                        </div>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group col-6">
                        <label asp-for="Abbr" for="abb"></label>
                        <div class="input-group">
                            <div class="input-group-text"><img src="~/icons/buildings.svg" /></div>
                            <input asp-for="Abbr" class="form-control" id="abb">
                        </div>
                    </div>

                    <input asp-for="Addresses[0].Id" value="@Model.Addresses[0].Id" class="form-control" hidden>
                    <div class="form-group col-6">
                        <label asp-for="Addresses[0].FullAddress" for="adr"></label>
                        <div class="input-group">
                            <input asp-for="Addresses[0].FullAddress" class="form-control" id="adr">
                        </div>
                    </div>
                    <div class="form-group col-6">
                        <label asp-for="Addresses[0].FullAddressFact" for="adr2"></label>
                        <div class="input-group">
                            <input asp-for="Addresses[0].FullAddressFact" class="form-control" id="adr2">
                        </div>
                    </div>
                    <div class="form-group col-6">
                        <label asp-for="Unp" class="control-label"></label>
                        <input asp-for="Unp" class="form-control" />
                        <span asp-validation-for="Unp" class="text-danger"></span>
                    </div>
                    <div class="form-group col-6">
                        <label asp-for="PaymentAccount" pattern="^[А-Яа-яЁё\s]+$" for="ac"></label>
                        <div class="input-group">
                            <div class="input-group-text"><img src="~/icons/account_balance_wallet.svg" /></div>
                            <input asp-for="PaymentAccount" type="text" class="form-control ac" id="ac" placeholder="BY20OLMP31350000001000000933">
                        </div>
                        <span asp-validation-for="PaymentAccount" class="text-danger"></span>
                    </div>
                    <div class="form-group col-6">
                        <label asp-for="Email" for="em"></label>
                        <div class="input-group">
                            <div class="input-group-text"><img src="~/icons/alternate_email.svg" /></div>
                            <input asp-for="Email" type="email" class="form-control" id="em">
                        </div>
                    </div>
                    <div class="form-group col-6">
                        <label asp-for="Addresses[0].PostIndex" for="psi"></label>
                        <div class="input-group">
                            <input asp-for="Addresses[0].PostIndex" class="form-control" id="psi">
                        </div>
                        <span asp-validation-for="Addresses[0].PostIndex" class="text-danger"></span>
                    </div>
                    <div class="form-group col-6">
                        <label asp-for="Phones[0].Number">Номер телефона</label>
                        <div class="input-group">
                            <div class="input-group-text"><img src="~/icons/call_phone.svg" /></div>
                            <input name="Phones[0].Number" value="@Model.Phones.FirstOrDefault()?.Number" type="text" class="form-control phone-number-pattern-fill" placeholder="8033 555-55-55" pattern="8[0-9]{3} [0-9]{3}-[0-9]{2}-[0-9]{2}" />
                        </div>
                    </div>
                    <div class="form-group col-6">
                        <label asp-for="Addresses[0].SiteAddress" class="control-label">Сайт организации</label>
                        <input asp-for="Addresses[0].SiteAddress" class="form-control" />
                    </div>
                    <div class="form-group mt-3 btn_block">
                        <input type="submit" value="Сохранить" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        fillPhoneInput();

        PaymentAccountSpace($('#ac'));
        $('body').on('input', '.ac', function (e) {
            PaymentAccountSpace(this);
        });

        function PaymentAccountSpace(target) {            
            val = $(target).val().replace(/-/g, "");
            val = val.substring(0, 28);            
            var val1 = '';
            var c = 0;
            Array.from(val).forEach(elem => {
                if (c == 4) {
                    val1 += '-';
                    c = 0;
                }
                val1 += elem;                
                c++;                
            });
            $(target).val(val1)
        }
    </script>
}
