@model BusinessLayer.Models.IndexViewModel
@using BusinessLayer.Models;
@{
    ViewData["Title"] = "Список организаций";
}
<style>
    #org_table{
        min-width:700px;       
    }
</style>
<div class="dm-overlay">
    <div class="dm-table">
        <div class="dm-cell">
            <div class="dm-modal">
                <div class="top-modal-block flex-column">
                    <div class="input-group m-2 ">
                        <span class="my-modal-title m-auto">@ViewData["Title"]</span>
                        <a asp-controller="Home" asp-action="" class="close-btn"></a>
                    </div>
                    <div class="input-group m-2">

                        <button type="button" class="btn btn-success k-mr-2" onclick="location.href='@Url.Action("Create", "Organizations")'">Новая организация</button>
                        @using (Html.BeginForm("Index", "Organizations", FormMethod.Get))
                        {
                            <form style="search-form">
                                <label style="search-form__text">Название организации:</label> @Html.TextBox("query", ViewBag.CurrentFilter as string)
                                <input type="submit" value="Найти" />
                            </form>
                        }
                    </div>
                    <hr class="modal-line" />
                    <div style="max-height:700px; overflow-y:scroll">
                        <table class="table table-bordered table-main table-main-short" id="org_table">
                            <thead>
                                <tr>
                                    <th>
                                        <span class="column_300">
                                            @Html.ActionLink("Название", "Index", new { sortOrder = ViewBag.NameSortParm, currentFilter=ViewBag.CurrentFilter } , new {id="arrayName", @class=""})

                                        </span>
                                    </th>
                                    <th>
                                        <span class="column_150">
                                            @Html.ActionLink("Аббревиатура", "Index", new { sortOrder = ViewBag.AbbrSortParm, currentFilter=ViewBag.CurrentFilter } , new {id="arrayAbbr", @class=""})
                                        </span>
                                    </th>
                                    <th>
                                        <span class="column_100">
                                        @Html.ActionLink("УНП", "Index", new { sortOrder = ViewBag.UnpSortParm, currentFilter=ViewBag.CurrentFilter } , new {id="arrayUnp", @class=""})
                                   </span>
                                    </th>
                                    <th>
                                        <span class="column_75">
                                        Отделы
                                        </span>
                                    </th>
                                    <th>
                                        <span class="column_75">
                                        Телефоны
                                        </span>
                                    </th>
                                    <th>
                                        <span class="column_200">
                                        Юр. адрес
                                        </span>
                                    </th>
                                    <th>
                                        <span class="column_75">
                                        Почтовый индекс
                                        </span>
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (OrganizationDTO item in Model.Objects)
                                {
                                    <tr>
                                        <td>
                                            <span class="column_300">
                                            @Html.DisplayFor(modelItem => item.Name)
                                            </span>
                                        </td>
                                        <td>
                                            <span class="column_150">
                                                @Html.DisplayFor(modelItem => item.Abbr)
                                            </span>
                                        </td>
                                        <td>
                                            <span class="column_100">
                                            @Html.DisplayFor(modelItem => item.Unp)
                                            </span>
                                        </td>

                                        <td>
                                            <span class="column_75">
                                            <span class="icon link_to_page dropdown-toggle">
                                            </span>
                                            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                                <a class="icon view_to_add_pages " asp-controller="Departments"
                                                   asp-action="Create" asp-route-idOrg="@item.Id"></a>
                                                <div class="dropdown-divider"></div>
                                                @foreach (var department in item.Departments)
                                                {
                                                    <div class="d-flex flex-row">
                                                        <a asp-controller="Departments" asp-action="Details" asp-route-id="@department.Id">
                                                            @department.Name
                                                        </a>


                                                    </div>
                                                }
                                            </div>
                                            </span>
                                        </td>
                                        <td>
                                            <span class="column_75">
                                            @foreach (var phone in item.Phones)
                                            {
                                                <div class="d-flex flex-row">
                                                    <span class="p-1 k-mr-5 text-break">@phone.Number</span>
                                                </div>
                                            }
                                            </span>
                                        </td>
                                        <td>
                                            <span class="column_200">
                                            @foreach (var address in item.Addresses)
                                            {
                                                @if (address.FullAddress != null)
                                                {
                                                    <div class="d-flex flex-row">
                                                        <span class="p-1 k-mr-5 text-break">@address.FullAddress</span>
                                                    </div>
                                                }
                                            }
                                            </span>
                                        </td>
                                        <td>
                                            <span class="column_75">
                                            @foreach (var address in item.Addresses)
                                            {
                                                @if (address.PostIndex != null)
                                                {
                                                    <div class="d-flex flex-row">
                                                        <span class="p-1 k-mr-5 text-break">@address.PostIndex</span>
                                                    </div>
                                                }
                                            }
                                            </span>
                                        </td>
                                        <td>
                                            <span class="icon edit" title="Редактировать">
                                                <a asp-action="Edit" asp-route-id="@item.Id"></a>
                                            </span>
                                            <span class="icon delete" title="Удалить">
                                                <a asp-action="Delete" asp-route-id="@item.Id"></a>
                                            </span>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <nav aria-label="Page navigation example" style="margin-top:10px;">
                        <ul class="pagination justify-content-center">
                            <li class="page-item previous_btn">
                                @{
                                    @if (Model.PageViewModel.PageNumber > 1)
                                    {
                                        <a class="page-link" asp-action="Index" asp-route-pageNum="@(Model.PageViewModel.PageNumber - 1)">&lt;</a>
                                    }
                                    @if (Model.PageViewModel.PageNumber <= 1)
                                    {
                                        <a class="page-link" asp-action="Index" asp-route-pageNum="@(Model.PageViewModel.PageNumber - 1)" tabindex="-1" aria-disabled="true">&lt;</a>
                                    }
                                }

                            </li>
                            @{
                                int counter = 1;
                                int index = Model.PageViewModel.PageNumber <= 5 ? 1 : Model.PageViewModel.PageNumber;
                                for (int i = index; i <= Model.PageViewModel.TotalPages; i++)
                                {
                                    <li class="page-item pag_btn_num"><a class="page-link " asp-action="Index" asp-route-pageNum="@i" value="@i">@i</a></li>
                                    if (counter == 5)
                                    {
                                        counter = 1;
                                        break;
                                    }
                                }
                            }

                            <li class="page-item next_btn">
                                @{
                                    @if (Model.PageViewModel.PageNumber <= Model.PageViewModel.TotalPages)
                                    {
                                        <a class="page-link" asp-action="Index" asp-route-pageNum="@(Model.PageViewModel.PageNumber + 1)">&gt;</a>
                                    }
                                    else
                                    {
                                        <a class="page-link" asp-action="Index" asp-route-pageNum="@(Model.PageViewModel.PageNumber + 1)" aria-disabled="true">&gt;</a>
                                    }
                                }
                            </li>
                        </ul>
                    </nav>
                    @* <div class="pages">
                        @{
                            if (Model.PageViewModel.HasPreviousPage)
                            {
                                <a class="btn btn-primary" asp-action="Index" asp-route-pageNum="@(Model.PageViewModel.PageNumber - 1)">&lt;</a>
                            }
                            else
                            {
                                <a class="btn btn-primary disabled" asp-action="Index" asp-route-pageNum="@(Model.PageViewModel.PageNumber - 1)">&lt;</a>
                            }
                        }
                        <b> @Model.PageViewModel.PageNumber / @Model.PageViewModel.TotalPages</b>
                        @{
                            if (Model.PageViewModel.HasNextPage)
                            {
                                <a class="btn btn-primary" asp-action="Index" asp-route-pageNum="@(Model.PageViewModel.PageNumber + 1)">&gt;</a>
                            }
                            else
                            {
                                <a class="btn btn-primary disabled" asp-action="Index" asp-route-pageNum="@(Model.PageViewModel.PageNumber + 1)">&gt;</a>
                            }
                        }
                    </div> *@
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script type="text/javascript">


        ////// Pagination
        paginationFunc(@Model.PageViewModel.PageNumber, @Model.PageViewModel.TotalPages);
                //////ENd pagination
    </script>
                                }