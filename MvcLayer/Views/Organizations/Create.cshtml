@model MvcLayer.Models.OrganizationViewModel

@{
    ViewData["Title"] = "Новая организация";
}
<div class="dm-overlay">
    <div class="dm-table">
        <div class="dm-cell">
            <div class="dm-modal">
                <div class="top-modal-block">
                    <label class="my-modal-title">@ViewData["Title"]</label>

                    <a asp-controller="Organizations" asp-action="" class="close-btn"></a>
                </div>
                <hr class="modal-line" />
                <form asp-action="Create" class="row">
                    @*Организация*@
                    <div class="col-5">
                        <div class="form-group">
                            <label asp-for="Name" class="control-label">Наименование</label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Abbr" class="control-label"></label>
                            <input asp-for="Abbr" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label asp-for="Unp" class="control-label"></label>
                            <input asp-for="Unp" class="form-control"/>
                            <span asp-validation-for="Unp" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Phones[0].Number" class="control-label">Номер телефона</label>
                            <input asp-for="Phones[0].Number" class="form-control phone-number-pattern-fill" placeholder="8033 555-55-55" pattern="8[0-9]{3} [0-9]{3}-[0-9]{2}-[0-9]{2}" />
                            <span asp-validation-for="Phones[0].Number" class="text-danger"></span>
                        </div>
                    </div>
                    @*Добавляем отдел со значением NULL*@
                    <input asp-for="Departments[0].Name" value="@string.Empty" hidden />

                    <div class="col-7">
                        @*Адрес*@
                        <div>
                            <div class="form-group">
                                <label asp-for="Addresses[0].FullAddress" class="control-label">Юр.адрес</label>
                                <input asp-for="Addresses[0].FullAddress" class="form-control" placeholder="РБ, г.Минск, ул.Чичерина, д.19,...." />
                            </div>
                            <div class="form-group">
                                <label asp-for="Addresses[0].FullAddressFact" class="control-label">Адрес</label>
                                <input asp-for="Addresses[0].FullAddressFact" class="form-control" placeholder="РБ, г.Минск, ул.Чичерина, д.19,...." />
                            </div>
                            <div class="form-group">
                                <label asp-for="Addresses[0].PostIndex" class="control-label">Почтовый индекс</label>
                                <input asp-for="Addresses[0].PostIndex" class="form-control"/>
                                <span asp-validation-for="Addresses[0].PostIndex" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Addresses[0].SiteAddress" class="control-label">Сайт организации</label>
                                <input asp-for="Addresses[0].SiteAddress" class="form-control" />
                            </div>
                        </div>
                    </div>
                    <div class="form-group mt-3">
                        <input type="submit" value="Добавить" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        fillPhoneInput();
    </script>
}
