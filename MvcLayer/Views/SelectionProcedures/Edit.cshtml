@model MvcLayer.Models.SelectionProcedureViewModel
@inject BusinessLayer.Interfaces.ContractInterfaces.IContractService Contract

@{
    ViewData["Title"] = "Редактирование";
    var contid = ViewData["contractId"];
    var contract = contid is not null && (int)contid > 0 ? Contract.GetById((int)contid) : null;
}
<style>
    .dm-modal {
        background-color: lightsteelblue;
    }

    .close-btn {
        color: red
    }

        .close-btn::after {
            border: 2px solid #F00 !important;
        }

        .close-btn:hover::after {
            border-color: red !important;
            color: red !important;
            -webkit-transform: scale(1);
            -moz-transform: scale(1);
            -ms-transform: scale(1);
            transform: scale(1);
            font-weight: bold;
        }

        .text_input {
            display: flex;
            justify-content: space-between;
            flex-direction: row;
        }
</style>
<div class="dm-overlay">
    <div class="dm-table">
        <div class="dm-cell">
            <div class="dm-modal" style="max-width:960px;">
                <div class="top-modal-block">
                    <label class="my-modal-title">@ViewData["Title"]</label>
                    @if (@contract?.Id != null && @contract?.Id > 0)
                    {
                        <a asp-controller="Contracts" asp-action="Details" asp-route-id="@contract?.Id" class="close-btn"></a>
                    }
                    @if (@contract?.Id == null || @contract?.Id == 0)
                    {
                        <a asp-controller="Contracts" asp-action="" class="close-btn"></a>
                    }
                </div>
                <hr class="modal-line" />
                <div class="row">
                    <form asp-action="Edit" class="row">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="ContractId" value="@contract?.Id" />
                        <div class="form-group col-6">
                            <label asp-for="Name" class="control-label"></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group col-6">
                            <label asp-for="TypeProcedure" class="control-label"></label>
                            <input asp-for="TypeProcedure" class="form-control" />
                            <span asp-validation-for="TypeProcedure" class="text-danger"></span>
                        </div>
                        <div class="form-group col-6">
                            <label asp-for="DateBegin" class="control-label"></label>
                            <input asp-for="DateBegin" type="datetime" class="form-control datepickersNull" />
                            <span asp-validation-for="DateBegin" class="text-danger"></span>
                        </div>
                        <div class="form-group col-6">
                            <label asp-for="DateEnd" class="control-label"></label>
                            <input asp-for="DateEnd" type="datetime" class="form-control datepickersNull" />
                            <span asp-validation-for="DateEnd" class="text-danger"></span>
                        </div>
                        <div class="form-group col-6">
                            <label asp-for="StartPrice" class="control-label"></label>
                            <input name="StartPrice" type="text" class="form-control cost" value="@Model.StartPrice" />
                            <span asp-validation-for="StartPrice" class="text-danger"></span>
                        </div>
                        <div class="form-group col-6">
                            <label asp-for="AcceptancePrice" class="control-label"></label>
                            <input name="AcceptancePrice" type="text" class="form-control cost" value="@Model.AcceptancePrice" />
                            <span asp-validation-for="AcceptancePrice" class="text-danger"></span>
                        </div>
                        <div class="form-group col-6">
                            <label asp-for="AcceptanceNumber" class="control-label"></label>
                            <input asp-for="AcceptanceNumber" class="form-control" />
                            <span asp-validation-for="AcceptanceNumber" class="text-danger"></span>
                        </div>
                        <div class="form-group col-6">
                            <label asp-for="DateAcceptance" class="control-label"></label>
                            <input asp-for="DateAcceptance" type="datetime" class="form-control datepickersNull" />
                            <span asp-validation-for="DateAcceptance" class="text-danger"></span>
                        </div>                       
                        <div class="text_input form-group btn_block">
                            <a class="btn btn-success mt-3" asp-controller="Contracts" asp-action="Details" asp-route-id="@Model?.ContractId">Вернуться</a>
                            <input type="submit" value="Сохранить" class="btn btn-primary col-3 mt-3" />
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(function ($) {
            var allCost = $(".cost")
            for (let el of allCost) {
                digits_float(el)
            }
            $('body').on('input', '.cost', function (e) {
                digits_float(this);
            });
        });
    </script>
}