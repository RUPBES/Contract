@model MvcLayer.Models.EstimateDocViewModel

@{
    ViewData["Title"] = "Редактирование";
}

<div class="dm-overlay">
    <div class="dm-table">
        <div class="dm-cell">
            <div class="dm-modal" style="max-width:960px;">
                <div class="top-modal-block">
                    <label class="my-modal-title">@ViewData["Title"]</label>
                    @if (Model?.ContractId != null && @Model?.ContractId > 0)
                    {
                        <a asp-controller="EstimateDocs" asp-action="GetByContractId" asp-route-id="@Model?.ContractId" class="close-btn"></a>
                    }
                    @if (@Model?.ContractId == null || @Model?.ContractId == 0)
                    {
                        <a asp-controller="Contracts" asp-action="" class="close-btn"></a>
                    }
                </div>
                <hr class="modal-line" />
                <form asp-action="Edit" class="row">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    <input asp-for="ContractId" value="@Model?.ContractId" hidden>
                    <div class="form-group col-6">
                        <label asp-for="Number" class="control-label"></label>
                        <input asp-for="Number" class="form-control" />
                        <span asp-validation-for="Number" class="text-danger"></span>
                    </div>
                    <div class="form-group col-6">
                        <label asp-for="DateChange" class="control-label"></label>
                        <input asp-for="DateChange" type="datetime" class="form-control datepickersNull" />
                        <span asp-validation-for="DateChange" class="text-danger"></span>
                    </div>
                    <div class="form-group col-6">
                        <label asp-for="DateOutput" class="control-label"></label>
                        <input asp-for="DateOutput" type="datetime" class="form-control datepickersNull" />
                        <span asp-validation-for="DateOutput" class="text-danger"></span>
                    </div>
                    @if (ViewBag.Edit != null)
                    {
                        <div class="form-group col-6">
                            <label asp-for="Reason" class="control-label"></label>
                            <input asp-for="Reason" class="form-control" />
                            <span asp-validation-for="Reason" class="text-danger"></span>
                        </div>
                    }
                    <div class="form-group">
                        <input type="submit" value="Сохранить" class="btn btn-primary col-3 mt-3" />
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>