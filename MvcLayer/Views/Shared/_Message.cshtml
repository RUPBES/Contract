@model string

<div class="modal-content">
    <div class="modal-header">
        <h4>Результат</h4>
        <button class="close" data-dismiss="modal" onclick="closeModal()" area-hidden="true">X</button>
    </div>
    <div class="modal-body">
        <span>@Model</span>
        <button id="modal-button-delete" onclick="closeModal()" type="button" class="btn btn-danger k-mr-2">Ок</button>
    </div>
</div>

<script type="text/javascript">    
    function closeModal() {
        var result = $('@ViewData["reload"]?.ToString()');
        $('#modDialog').modal('toggle');
        if (result != null)
        {
            location.reload();
        }
    }
</script>