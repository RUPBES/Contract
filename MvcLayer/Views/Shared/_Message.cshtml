@using MvcLayer.Models;
@model ModalViewVodel

<style>
    .info_modal-text {
        font-weight: bold;
    }
</style>

<div class="modal-content">
    <div class="modal-header">
        <h3>@Model.header</h3>
        <button class="btn-close" data-bs-dismiss="modal" onclick="closeModal(document.getElementById('messageInput').value)" area-hidden="true"></button>
    </div>
    <div class="modal-body">
        <span class="info_modal-text">@Model.message</span>
    </div>
    <div class="modal-footer">
        <button id="modal-button-delete" onclick="closeModal(document.getElementById('messageInput').value)" type="button" class="btn btn-primary">@Model.textButton</button>

    </div>
</div>
<input id="messageInput" value="@ViewData["reload"]" hidden />
<script type="text/javascript">    
    function closeModal(result) {        
        $('#modDialog').modal('toggle');
        if (result === "Yes") {
            location.reload();
        }
    }
</script>