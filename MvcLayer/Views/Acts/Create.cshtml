@model MvcLayer.Models.ActViewModel
@inject BusinessLayer.Interfaces.ContractInterfaces.IContractService Contract
@{
    ViewData["Title"] = "Создать";
}

<h1>@ViewData["Title"]</h1>

<h4>Акт приостановления/возобновления</h4>
<hr />
<div class="row">
    <form asp-action="Create" class="row" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>        
        <div class="form-group col-6">
            <label asp-for="Reason" class="control-label"></label>
            <input asp-for="Reason" class="form-control" />
            <span asp-validation-for="Reason" class="text-danger"></span>
        </div>
        <div class="form-group col-6">
            <label asp-for="DateAct" class="control-label"></label>
            <input asp-for="DateAct" type="date" class="form-control" />
            <span asp-validation-for="DateAct" class="text-danger"></span>
        </div>
        <div class="form-group col-6">
            <label asp-for="DateSuspendedFrom" class="control-label"></label>
            <input asp-for="DateSuspendedFrom" type="date" class="form-control" />
            <span asp-validation-for="DateSuspendedFrom" class="text-danger"></span>
        </div>
        <div class="form-group col-6">
            <label asp-for="DateSuspendedUntil" class="control-label"></label>
            <input asp-for="DateSuspendedUntil" type="date" class="form-control" />
            <span asp-validation-for="DateSuspendedUntil" class="text-danger"></span>
        </div>
        <div class="form-group col-6">
            <label asp-for="DateRenewal" class="control-label"></label>
            <input asp-for="DateRenewal" type="date" class="form-control" />
            <span asp-validation-for="DateRenewal" class="text-danger"></span>
        </div>
        <div class="form-group col-6">
            <label asp-for="IsSuspension" class="control-label"></label>
            <input asp-for="IsSuspension" class="form-control" />
            <span asp-validation-for="IsSuspension" class="text-danger"></span>
        </div>
        <div class="form-group col-6">
            <label asp-for="ContractId" class="control-label">Договор</label>
            <select asp-for="ContractId" class="form-control">
                <option selected></option>
                @foreach (var item in Contract.GetAll())
                {
                    <option value="@item.Id">@item.Number</option>
                }
            </select>
        </div>
        <div class="form-group col-6">
            <label asp-for="FilesEntity" class="control-label"></label>
            <input asp-for="FilesEntity" type="file" class="form-control" />
            <span asp-validation-for="FilesEntity" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
    </form>
</div>

<div>
    <a asp-action="Index">Вернуться назад</a>
</div>

