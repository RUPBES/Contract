@model IEnumerable<MvcLayer.Models.ContractViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Список договоров</h1>

<p>
    <a asp-action="Create">Новый договор</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FundingSource)
            </th>
            <th>
                Номер и дата договора              
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NameObject)
            </th>           
            <th>
                Генподрядчик
            </th>
            <th>
               Cроки выполнения работ
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EnteringTerm)
            </th>
            <th>
                Срок действия договора по взаиморасчетам
            </th>
            <th>
                Акты приостановки возобновления работ
            </th>
            <th>
                Условия оплаты, без авансов тек. % цел.% отсрочка/в течение
            </th>
            <th>
                Услуги генподряда (для договоров субподряда)
            </th>
            <th>
                Материалы по факту или сметной стоимости согласно договору
            </th>
            
            <th>
                @Html.DisplayNameFor(model => model.Сurrency)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ContractPrice)
            </th>

            
            <th>
                @Html.DisplayNameFor(model => model.FundingSource)
            </th>            
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FundingSource)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Number) от
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NameObject)
                </td>               
                <td>
                    @Html.DisplayFor(modelItem => item.ContractOrganizations.FirstOrDefault().Organization.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateBeginWork)                
                    @Html.DisplayFor(modelItem => item.DateEndWork)
                </td>                
                <td>
                    @Html.DisplayFor(modelItem => item.EnteringTerm)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ContractTerm)
                </td>
                <td>
                   @Html.ActionLink("P4","","")
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PaymentСonditionsAvans)
                    @Html.ActionLink("P11","","")

                    @Html.DisplayFor(modelItem => item.PaymentСonditionsRaschet)
                    @Html.ActionLink("P7","","")
                </td>
                <td>
                    @Html.ActionLink("P13","","")
                </td>
                <td>
                    @Html.ActionLink("P15","","")
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Сurrency)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ContractPrice)
                </td>                
                <td>
                    @Html.DisplayFor(modelItem => item.FundingSource)
                </td>               
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
