@using MvcLayer.Models;
@using Newtonsoft.Json;
@model MvcLayer.Models.ServiceGCViewModel

@inject BusinessLayer.Interfaces.ContractInterfaces.IContractService Contract
@{
    ViewData["Title"] = "Услуги генподрядчика";
    int index = 0;
    var d = Model;   

    int backId = 0;
    if ((int)ViewData["returnContractId"] == 0)
        backId = (int)ViewData["contractId"];
    else backId = (int)ViewData["returnContractId"];

    bool isFact = d?.ServiceCosts?.FirstOrDefault()?.IsFact == true ? true : false;

    int contrId = d?.ContractId is not null && d.ContractId > 0 ? (int)d?.ContractId : 0;
    var contract = Contract.GetById(contrId);
}
<style>
    .cont-table {
        overflow-x: scroll;
    }

    th,
    td {
        min-width: 250px;
    }


    .dm-modal {
        background-color: lightsteelblue;
    }

    .close-btn {
        color: red
    }

        .close-btn::after {
            border: 2px solid #F00 !important;
        }

        .close-btn:hover::after {
            border-color: red !important;
            color: red !important;
            -webkit-transform: scale(1);
            -moz-transform: scale(1);
            -ms-transform: scale(1);
            transform: scale(1);
            font-weight: bold;
        }
        .form-label {
            font-weight: bold;
            margin-right: 1%;
        }

    #formFileMultiple {
        width: 20%;
        }
        .mb-2 {
        display: flex;
        }
</style>

<div class="dm-overlay">
    <div class="dm-table">
        <div class="dm-cell">
            <div class="dm-modal">
                <div class="top-modal-block">
                    <label class="my-modal-title">@ViewData["Title"] согласно договора @contract?.Number</label>
                    @if (backId != null && backId > 0)
                    {
                        <a asp-controller="Contracts" asp-action="Details" asp-route-id="@backId" class="close-btn"></a>
                    }
                    @if (backId == null || backId == 0)
                    {
                        <a asp-controller="Contracts" asp-action="" class="close-btn"></a>
                    }
                </div>
                <hr class="modal-line" />
                <form asp-action="Create" class="row">
                    <input name="returnContractId" value="@ViewBag.returnContractId" hidden>
                    <div class="mb-2">
                        <label for="formFileMultiple" class="form-label">Проценты:</label>
                        <input asp-for="ServicePercent" id="formFileMultiple" class="form-control" type="number" step="0.01" min="0" max="100" />
                    </div>
                    <div class="cont-table">
                        <table class="table table-bordered table-striped table-main">
      
                            <tr>

                                <th>Период</th>
                                @foreach (var item in d.ServiceCosts)
                                {
                                    <th>
                                        @item.Period?.ToString("MMM yyyy")
                                        <input asp-for="ServiceCosts[index].Period" type="text" class="form-control" value="@item.Period" hidden />
                                    </th>
                                    index++;
                                }
                                @{
                                    index = 0;
                                }
                            </tr>                           
                            <tr>
                                <th>Сумма генуслуг</th>
                                @foreach (var item in d.ServiceCosts)
                                {
                                    <td><input name="ServiceCosts[@index].Price" class="form-control cost" type="text"/></td>
                                    index++;
                                }
                                @{
                                    index = 0;
                                }
                            </tr>
                            @foreach (var item in d.ServiceCosts)
                            {
                                <input asp-for="AmendmentId" hidden />
                                <input asp-for="ContractId" hidden />
                                <input asp-for="IsChange" hidden />
                                <input asp-for="ChangeServiceId" hidden />
                            }

                        </table>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Создать" class="btn btn-primary" />
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(function ($) {
            var allCost = $(".cost")
            for (let el of allCost) {
                digits_float(el)
            }
            $('body').on('input', '.cost', function (e) {
                digits_float(this);
            });
        });
    </script>
}