@model MvcLayer.Models.ServiceGCViewModel
@{
    ViewData["Title"] = "Добавление фактически полученной суммы, за оказанные генуслуги";
}

<style>
        .mt-3 {
            text-align: right;
        }
</style>

<div class="dm-overlay">
    <div class="dm-table">
        <div class="dm-cell">
            <div class="dm-modal"style="max-width:700px;">
                <div class="top-modal-block">
                    <label class="my-modal-title">@ViewData["Title"]</label>
                    @if (Model?.ContractId != null && Model?.ContractId > 0)
                    {
                        <a asp-controller="Contracts" asp-action="Details" asp-route-id="@Model?.ContractId" class="close-btn"></a>
                    }
                    @if (Model?.ContractId == null || Model?.ContractId == 0)
                    {
                        <a asp-controller="Contracts" asp-action="" class="close-btn"></a>
                    }
                </div>
                <hr class="modal-line" />

                <form asp-action="Edit" class="row" enctype="multipart/form-data">
                    <input asp-for="Id" value="@Model?.Id" hidden />
                    <input asp-for="ContractId" value="@Model?.ContractId" hidden />
                    <input asp-for="IsFact" value="true" hidden />
                    <input asp-for="ServicePercent" value="@Model.ServicePercent" hidden />
                    <input asp-for="ChangeServiceId" value="@Model.ChangeServiceId" hidden />

                    <input asp-for="ServiceCosts[0].IsFact" value="true" hidden />                    
                    <input asp-for="ServiceCosts[0].ServiceGCId" value="@Model?.Id" hidden />
                    <input asp-for="ServiceCosts[0].Period" value="@Model?.Period" type="datetime" hidden />

                    <div class="form-group col-12">
                        <label class="control-label">Месяц</label>
                        <input asp-for="ServiceCosts[0].Period" value="@Model?.Period?.ToShortDateString()" type="datetime" class="form-control" disabled />
                    </div>
                    <div class="form-group col-12">
                        <label asp-for="@Model.Price" class="control-label"></label>
                        <input name="ServiceCosts[0].Price" type="text" class="form-control cost" />

                    </div>
                    <div class="form-group mt-3">
                        <input type="submit" value="Создать" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(function ($) {
            var allCost = $(".cost")
            for (let el of allCost) {
                digits_float(el)
            }
            $('body').on('input', '.cost', function (e) {
                digits_float(this);
            });
        });
    </script>
}