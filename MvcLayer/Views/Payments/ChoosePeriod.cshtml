@model MvcLayer.Models.PeriodChooseViewModel
@using BusinessLayer.Models;
@inject BusinessLayer.Interfaces.ContractInterfaces.IPaymentService Payment

@{
    ViewData["Title"] = "Выбрать период оплаты";
}
<style>
    .title-warning {
        display: flex;
        justify-content: center;
        font-family: Inter;
        font-size: 20px;
        font-style: normal;
        font-weight: 700;
        line-height: 22px;
        letter-spacing: -0.34px;
        border: solid #e83c14 1px;
        border-radius: 5px;
    }

    label {
        margin: 10px auto;
    }

    #target {
        margin: 100px auto;
        width: 50%;
    }

    #chooseAmendment {
        margin: 0 auto 30px auto;
    }
</style>


<div class="dm-overlay">
    <div class="dm-table">
        <div class="dm-cell">
            <div class="dm-modal" style="width: 850px; height:440px">
                <div class="top-modal-block">
                    <label class="my-modal-title">@ViewData["Title"]</label>
                    @if (@Model?.ContractId != null && @Model?.ContractId > 0)
                    {
                        <a asp-controller="Contracts" asp-action="Details" asp-route-id="@Model?.ContractId" class="close-btn"></a>
                    }
                    @if (@Model?.ContractId == null || @Model?.ContractId == 0)
                    {
                        <a asp-controller="Contracts" asp-action="" class="close-btn"></a>
                    }
                </div>
                <hr class="modal-line" />
                <form id="target" asp-action="CreatePeriods" class="row" method="post" enctype="multipart/form-data" data-ajax="true" data-ajax-method="POST" data-ajax-mode="replace" data-ajax-update="#result">
                    <input asp-for="ContractId" value="@Model?.ContractId" hidden />
                    <div class="form-group col-6 mb-3">
                        <label asp-for="PeriodStart" class="control-label">Укажите начало периода</label>
                        <input asp-for=PeriodStart type="datetime" class="form-control datepickers" />
                    </div>
                    <div class="form-group col-6 mb-3">
                        <label asp-for="PeriodEnd" class="control-label">Укажите окончание периода</label>
                        <input asp-for=PeriodEnd type="datetime" class="form-control datepickers" />
                    </div>
                    <div class="form-group">
                        <a class="btn btn-success float-start" asp-controller="Contracts" asp-action="Details" asp-route-id="@Model.ContractId">Вернуться назад</a>
                        <button class="btn btn-primary btn-sm float-end" type="submit">Выбрать</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script type="text/javascript">

        $("#amendCheck").on("change", function () {

            let isChange = $(this).prop('checked');
            let besInput = document.querySelector("#chooseAmendment");

            if (besInput.hidden != true) {
                besInput.hidden = true;
            }
            else {
                besInput.hidden = null;
            }

            if (isChange === false) {
                $(this).attr("value", "false")
            }
            else {
                $(this).attr("value", "true")
            }
        });

       
    </script>
    }
